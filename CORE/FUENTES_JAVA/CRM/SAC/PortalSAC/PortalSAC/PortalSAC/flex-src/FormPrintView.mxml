	    </mx:VBox>
    </mx:HBox>
    	
	<mx:HRule width="99%"/>

    <mx:PrintAdvancedDataGrid id="dataGrid" width="99%" height="99%" fontFamily="verdana" fontSize="8" fontWeight="normal">
