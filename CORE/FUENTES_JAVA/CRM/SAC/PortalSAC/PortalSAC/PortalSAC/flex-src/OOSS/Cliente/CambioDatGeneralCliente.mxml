		private function validaRequeridos():Boolean	{
			if (txtComentario.text.length==0)	{
				Alert.show( "Debe ingresar todos los datos requeridos identificados con (*).", 
				"Advertencia", 
				mx.controls.Alert.OK,
				this,
				null,
				iconWarning,
				mx.controls.Alert.OK );
				return false;				
			}
			return true;
		} // validaRequeridos
			
