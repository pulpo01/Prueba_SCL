CREATE TABLE MAS_PRODUCT.PF_CONCEPTOS_PROD_TD
(
  COD_PROD_OFERTADO  NUMBER(8)                  NOT NULL,
  COD_CONCEPTO       NUMBER(9)                  NOT NULL,
  IND_PRORRATEABLE   VARCHAR2(5 BYTE)           NOT NULL,
  TIPO_CARGO         VARCHAR2(5 BYTE)           NOT NULL,
  TIP_COBRO          VARCHAR2(1 BYTE)           DEFAULT 'V'
)
TABLESPACE MAS_PRODUCT_DATA;

COMMENT ON TABLE MAS_PRODUCT.PF_CONCEPTOS_PROD_TD IS '[ CNPR ] Conceptos facturables para productos ofertados';

COMMENT ON COLUMN MAS_PRODUCT.PF_CONCEPTOS_PROD_TD.TIP_COBRO IS 'A: Cobro Adelantado V: Cobro Vencido';

COMMENT ON COLUMN MAS_PRODUCT.PF_CONCEPTOS_PROD_TD.COD_PROD_OFERTADO IS 'Código de Producto Ofertado';

COMMENT ON COLUMN MAS_PRODUCT.PF_CONCEPTOS_PROD_TD.COD_CONCEPTO IS 'Código de Concepto Facturable';

COMMENT ON COLUMN MAS_PRODUCT.PF_CONCEPTOS_PROD_TD.IND_PRORRATEABLE IS 'Indicador de Prorrateabilidad (N No Prorrateable, S Es Prorrateable)';

COMMENT ON COLUMN MAS_PRODUCT.PF_CONCEPTOS_PROD_TD.TIPO_CARGO IS 'Tipo de Cargo (O Ocasional, R Recurrente)';

