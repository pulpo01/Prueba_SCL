CREATE TABLE CO_ANOMALIA_EXTERNA
(
  COD_RECEXT         NUMBER(8)                  NOT NULL,
  COD_ANOMALIA       NUMBER(3)                  NOT NULL,
  NUM_CONSECUTIVO    NUMBER(8)                  NOT NULL,
  FEC_IMPUTCONTABLE  DATE,
  IND_REGULARIZA     NUMBER(2)                  DEFAULT 0                     NOT NULL,
  EMP_RECAUDADORA    VARCHAR2(15 BYTE)          NOT NULL,
  FEC_EFECTIVIDAD    DATE                       NOT NULL,
  NUM_TRANSACCION    NUMBER(10)                 NOT NULL,
  COD_SERVICIO       NUMBER(2),
  NUM_EJERCICIO      VARCHAR2(12 BYTE)          NOT NULL,
  COD_CLIENTE        NUMBER(10),
  NUM_CELULAR        NUMBER(15),
  IMP_PAGO           NUMBER(14,4)               NOT NULL,
  NUM_IDENT          VARCHAR2(20 BYTE),
  TIP_VALOR          NUMBER(2),
  NUM_DOCUMENTO      NUMBER(9),
  COD_BANCO          VARCHAR2(15 BYTE),
  CTA_CORRIENTE      VARCHAR2(18 BYTE),
  NUM_TARJETA        VARCHAR2(19 BYTE),
  COD_TIPIDENT       VARCHAR2(2 BYTE),
  COD_REGION         VARCHAR2(3 BYTE),
  FEC_PROCESO        DATE                       NOT NULL,
  REG_ANOMALO        VARCHAR2(300 BYTE),
  TIP_MOVIMIENTO     VARCHAR2(2 BYTE),
  NUM_FOLIO_DOC      NUMBER(9),
  PREF_PLAZA_DOC     VARCHAR2(25 BYTE),
  FEC_PAGO           DATE
)
TABLESPACE TS_RECYCOB_SDAT
PCTUSED    0
PCTFREE    5
INITRANS   16
MAXTRANS   255
STORAGE    (
            INITIAL          880K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CO_ANOMALIA_EXTERNA IS 'Tabla de Anomalias de Pagos Externos.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_FOLIO_DOC IS 'Numero de folio del documento';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.PREF_PLAZA_DOC IS 'Prefijo Plaza del documento';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_RECEXT IS 'Codigo  de Recaudacion externa.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_ANOMALIA IS 'Codigo  de Anomalia.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_CONSECUTIVO IS 'Numero Correlativo.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.FEC_IMPUTCONTABLE IS 'Fecha de Imputacion Contable.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.IND_REGULARIZA IS 'Indicador de Regularizacion.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.EMP_RECAUDADORA IS 'Empresa Recaudadora.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.FEC_EFECTIVIDAD IS 'Fecha de Efectividad.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_TRANSACCION IS 'NUMERO DE TRANSACCION.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_SERVICIO IS 'Codigo de Servicio.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_EJERCICIO IS 'Numero de Ejercicio.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_CLIENTE IS 'Codigo de Cliente.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_CELULAR IS 'Numero de Celular.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.IMP_PAGO IS 'Importe de Pago.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_IDENT IS 'Numero de Identificacion.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.TIP_VALOR IS 'Tipo de Pago.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_DOCUMENTO IS 'Numero de Cheque.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_BANCO IS 'Codigo de Banco.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.CTA_CORRIENTE IS 'Cuenta Corriente.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.NUM_TARJETA IS 'Numero de Tarjeta.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_TIPIDENT IS 'Codigo de Tipo de Identificacion.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.COD_REGION IS 'Codigo de Region.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.FEC_PROCESO IS 'Fecha de Proceso.';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.REG_ANOMALO IS 'Registro Anomalo';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.TIP_MOVIMIENTO IS 'Tipo de Movimiento (Pago o Reversa)';

COMMENT ON COLUMN CO_ANOMALIA_EXTERNA.FEC_PAGO IS  'Indica la fecha cuando se realizo el pago';
