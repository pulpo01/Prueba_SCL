CREATE TABLE GA_LIMITE_CLIABO_TO
(
  COD_CLIENTE     NUMBER(8)                     NOT NULL,
  NUM_ABONADO     NUMBER(8)                     NOT NULL,
  COD_LIMCONS     VARCHAR2(5 BYTE)              NOT NULL,
  FEC_DESDE       DATE                          NOT NULL,
  FEC_HASTA       DATE,
  NOM_USUARORA    VARCHAR2(30 BYTE),
  FEC_ASIGNACION  DATE                          NOT NULL,
  EST_APLICA_TOL  NUMBER(2),
  FEC_APLICA_TOL  DATE,
  COD_PLANTARIF   VARCHAR2(5 BYTE),
  MTO_CONS        NUMBER(14,4)                  DEFAULT 0
)
TABLESPACE TS_CRM_POSVENTA_MDAT
PCTUSED    0
PCTFREE    5
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          25M
            NEXT             4M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE GA_LIMITE_CLIABO_TO IS 'Tabla Con Detalle De Series De Una Venta.';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.MTO_CONS IS 'Monto Límite de Consumo';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.COD_CLIENTE IS 'Codigo de Cliente';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.NUM_ABONADO IS 'Numero de Abonado';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.COD_LIMCONS IS 'Codigo de Limite de Consumo';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.FEC_DESDE IS 'Fecha Inicio Vigencia';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.FEC_HASTA IS 'Fecha Termino Vigencia (Null=Vigencia Infinita)';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.NOM_USUARORA IS 'Usuaurio Oracle que realiza elingreso o cambio';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.FEC_ASIGNACION IS 'Fecha Ingreso Registro';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.EST_APLICA_TOL IS 'Estado de Aplicacion en TOL';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.FEC_APLICA_TOL IS 'Fecha Estadoalcanzadoen Tol';

COMMENT ON COLUMN GA_LIMITE_CLIABO_TO.COD_PLANTARIF IS 'Codigo Plan Tarifario del Abonado';

