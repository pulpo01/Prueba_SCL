CREATE TABLE FA_CONTROLNC(
    NOM_USUARIO VARCHAR2(30) NOT NULL 
 ,  FEC_DESDE DATE NOT NULL 
 ,  IMP_MAXIMO NUMBER(14,4) NOT NULL 
 ,  FEC_HASTA DATE NOT NULL 
 ,  NUM_DIAS NUMBER(2,0) NOT NULL 
 ,  IND_INGMENU NUMBER(1,0) DEFAULT 0 NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_CONTROLNC IS 'Maximo por Usuario para la aplicacion de Notas Credito'
/
COMMENT ON COLUMN  FA_CONTROLNC.NOM_USUARIO IS 'Nombre de Usuario'
/
COMMENT ON COLUMN  FA_CONTROLNC.FEC_DESDE IS 'Fecha de Inicio Vigencia'
/
COMMENT ON COLUMN  FA_CONTROLNC.IMP_MAXIMO IS 'Importe Maximo por Usuario'
/
COMMENT ON COLUMN  FA_CONTROLNC.FEC_HASTA IS 'Fecha Fin Vigencia'
/
COMMENT ON COLUMN  FA_CONTROLNC.NUM_DIAS IS 'Numero de Dias-Mes'
/
COMMENT ON COLUMN  FA_CONTROLNC.IND_INGMENU IS 'Indicador de Ingreso a Opcion por Menu'
/
