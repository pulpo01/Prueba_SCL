CREATE TABLE TA_LRNOPERADOR(
    COD_LRN VARCHAR2(12) NOT NULL 
 ,  COD_OPERADOR NUMBER(5,0) NOT NULL 
 ,  COD_AREA VARCHAR2(5) NOT NULL 
 ,  NOM_USUARIO VARCHAR2(40) DEFAULT 'TARIFICA' NOT NULL 
 ,  FEC_ULTMOD DATE DEFAULT sysdate NOT NULL 
 ,  FEC_INI_VIG DATE DEFAULT sysdate NOT NULL 
 ,  FEC_TER_VIG DATE DEFAULT add_months(sysdate,12) NOT NULL 
 ) TABLESPACE    TS_TARIFICACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  TA_LRNOPERADOR IS 'PORTABILIDAD NUMERICA'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.COD_LRN IS 'RUTA DE IDENTIFICACION DE OPERADORA ORIGEN / DESTINO'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.COD_OPERADOR IS 'CODIGO DE LA OPERADORA'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.COD_AREA IS 'CODIGO DE AREA'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.NOM_USUARIO IS 'NOMBRE USUSARIO'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.FEC_ULTMOD IS 'FECHA DE LA TRANSACCION'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.FEC_INI_VIG IS 'FECHA INICIO DE VIGENCIA'
/
COMMENT ON COLUMN  TA_LRNOPERADOR.FEC_TER_VIG IS 'FECHA TERMINO DE VIGENCIA,1 A?O'
/
