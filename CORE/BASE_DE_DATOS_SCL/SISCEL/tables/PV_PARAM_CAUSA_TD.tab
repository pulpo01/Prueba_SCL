CREATE TABLE PV_PARAM_CAUSA_TD(
    COD_ACTABO VARCHAR2(2) NOT NULL 
 ,  NOM_TABLA VARCHAR2(30) NOT NULL 
 ,  NOM_CODIGO VARCHAR2(30) NOT NULL 
 ,  NOM_DESCRIPCION VARCHAR2(30) NOT NULL 
 ,  DES_WHERE VARCHAR2(300) NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  PV_PARAM_CAUSA_TD IS 'Indica el Nombre y Campos para las Causas x OOSS .'
/
COMMENT ON COLUMN  PV_PARAM_CAUSA_TD.COD_ACTABO IS 'Codigo de Actuacion asociado a la OOSS.'
/
COMMENT ON COLUMN  PV_PARAM_CAUSA_TD.NOM_TABLA IS 'Nombre de la Tabla de Causas.'
/
COMMENT ON COLUMN  PV_PARAM_CAUSA_TD.NOM_CODIGO IS 'Nombre del Campo que contiene el Codigo.'
/
COMMENT ON COLUMN  PV_PARAM_CAUSA_TD.NOM_DESCRIPCION IS 'Nombre del Campo que contiene la Descripcion.'
/
COMMENT ON COLUMN  PV_PARAM_CAUSA_TD.DES_WHERE IS 'Condicion para la Carga de las Causas.'
/
