CREATE TABLE AL_USOS(
    COD_USO NUMBER(2,0) NOT NULL 
 ,  DES_USO VARCHAR2(20) NOT NULL 
 ,  IND_RESTPLAN NUMBER(1,0) DEFAULT 0 NOT NULL 
 ,  IND_CARGOPRO NUMBER(1,0) DEFAULT 0 NOT NULL 
 ,  IND_USOVENTA NUMBER(1,0) DEFAULT 0 NULL 
 ,  NUM_DIAS_HIBERNACION NUMBER(3,0) DEFAULT 0 NOT NULL 
 ) TABLESPACE    TS_LOGISTICA_SDAT
 LOGGING
 CACHE
 NOPARALLEL
/
COMMENT ON TABLE  AL_USOS IS 'Usos a los que seran destinados los articulos'
/
COMMENT ON COLUMN  AL_USOS.COD_USO IS 'Codigo identificativo del uso o destino del articulo.'
/
COMMENT ON COLUMN  AL_USOS.DES_USO IS 'Descripcion del uso o destino del articulo.'
/
COMMENT ON COLUMN  AL_USOS.IND_USOVENTA IS 'Indica si el uso esta orientado al uso de ventas.'
/
COMMENT ON COLUMN  AL_USOS.NUM_DIAS_HIBERNACION IS 'Numero de dias de hibernacion'
/
