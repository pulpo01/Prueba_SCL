CREATE TABLE FA_DCTOS_SERV_REC_TD(
    COD_CLIENTE NUMBER(10,0) NOT NULL 
 ,  NUM_ABONADO NUMBER(10,0) DEFAULT 0 NOT NULL 
 ,  COD_PLANTARIF VARCHAR2(5) NOT NULL 
 ,  COD_CARGOBASICO VARCHAR2(5) NOT NULL 
 ,  IMP_CARGO_BASICO NUMBER(14,4) NOT NULL 
 ,  IMP_DESCUENTO NUMBER(14,4) NOT NULL 
 ,  IMP_CARGO_FINAL NUMBER(14,4) NOT NULL 
 ,  FEC_DESDEDCTO DATE NOT NULL 
 ,  FEC_HASTADCTO DATE NULL 
 ,  FEC_ULTMOD DATE NOT NULL 
 ,  NOM_USUARORA VARCHAR2(30) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) DEFAULT 1 NOT NULL 
 ) TABLESPACE    FACTURACION_DTAB
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_DCTOS_SERV_REC_TD IS '[ DCSR ] Contiene los descuentos de las bolsas dinámicas'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.COD_CLIENTE IS 'Código del cliente.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.NUM_ABONADO IS 'Número del abonado, para clientes y por defecto 0.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.COD_PLANTARIF IS 'Código del plan tarifario asociado al  descuento.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.COD_CARGOBASICO IS 'Código del cargo básico asociado al plan tarifario.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.IMP_CARGO_BASICO IS 'Importe del cargo básico sin descuento.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.IMP_DESCUENTO IS 'Importe del descuento a aplicar al cargo básico.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.IMP_CARGO_FINAL IS 'Importe final del cargo básico menos el descuento.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.FEC_DESDEDCTO IS 'Fecha de inicio  de la vigencia del descuento.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.FEC_HASTADCTO IS 'Fecha de fin de la vigencia del descuento.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.FEC_ULTMOD IS 'Fecha de la ultima modificación del registro.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.NOM_USUARORA IS 'Nombre del usuario que realiza la ultima modificación del registro.'
/
COMMENT ON COLUMN  FA_DCTOS_SERV_REC_TD.COD_PRODUCTO IS 'Código de producto'
/
