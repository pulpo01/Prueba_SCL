CREATE TABLE GA_IMPPENALIZA(
    COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  COD_PENALIZA NUMBER(2,0) NOT NULL 
 ,  FEC_DESDE DATE NOT NULL 
 ,  SW_PENALIZA NUMBER(1,0) NOT NULL 
 ,  IMP_PENALIZA NUMBER(14,4) NOT NULL 
 ,  COD_MONEDA VARCHAR2(3) NOT NULL 
 ,  FEC_HASTA DATE NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  GA_IMPPENALIZA IS 'Importes de Penalizaciones a Contratos'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.COD_PRODUCTO IS 'Codigo de Producto'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.COD_PENALIZA IS 'Codigo de Penalizacion'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.FEC_DESDE IS 'Fecha Desde Vigencia'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.SW_PENALIZA IS 'Tipo de Penalizacion a Aplicar ; (0) Diario, (1) Monto Fijo'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.IMP_PENALIZA IS 'Fecha Hasta Vigencia'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.COD_MONEDA IS 'Moneda en que se aplica el importe'
/
COMMENT ON COLUMN  GA_IMPPENALIZA.FEC_HASTA IS 'Fecha Fin del importe de penalizacion'
/
