CREATE TABLE SISCEL.GA_USUARIOS
(
  COD_USUARIO     NUMBER(8)                     NOT NULL,
  COD_CUENTA      NUMBER(8)                     NOT NULL,
  COD_SUBCUENTA   VARCHAR2(15 BYTE)             NOT NULL,
  NOM_USUARIO     VARCHAR2(50 BYTE)             NOT NULL,
  NOM_APELLIDO1   VARCHAR2(20 BYTE)             NOT NULL,
  FEC_ALTA        DATE                          NOT NULL,
  COD_TIPIDENT    VARCHAR2(2 BYTE)              NOT NULL,
  NUM_IDENT       VARCHAR2(20 BYTE)             NOT NULL,
  IND_ESTADO      VARCHAR2(1 BYTE)              DEFAULT 'C'                   NOT NULL,
  NOM_APELLIDO2   VARCHAR2(20 BYTE),
  FEC_NACIMIEN    DATE,
  COD_ESTCIVIL    VARCHAR2(1 BYTE),
  IND_SEXO        VARCHAR2(1 BYTE),
  IND_TIPOTRAB    VARCHAR2(2 BYTE),
  NOM_EMPRESA     VARCHAR2(50 BYTE),
  COD_ACTEMP      NUMBER(3),
  COD_OCUPACION   VARCHAR2(3 BYTE),
  NUM_PERCARGO    NUMBER(2),
  IMP_BRUTO       NUMBER(14,4),
  IND_PROCOPER    NUMBER(1),
  COD_OPERADOR    NUMBER(5),
  NOM_CONYUGE     VARCHAR2(40 BYTE),
  COD_PINUSUAR    VARCHAR2(4 BYTE),
  COD_ESTRATO     VARCHAR2(1 BYTE),
  EMAIL           VARCHAR2(100 BYTE),
  TELEF_CONTACTO  VARCHAR2(15 BYTE)
)   TABLESPACE TS_CRM_POSVENTA_MDAT
/

COMMENT ON TABLE SISCEL.GA_USUARIOS IS 'Usuarios de Productos';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.TELEF_CONTACTO IS 'Telefono de contacto';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_OCUPACION IS 'Codigo de Ocupacion';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NUM_PERCARGO IS 'Numero de Personas a su Cargo';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.IMP_BRUTO IS 'Ingresos Brutos Anuales';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.IND_PROCOPER IS 'Indicativo de Procedencia de otra Operadora Si(1)/No(0)';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_OPERADOR IS 'Operador del cual Procede';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NOM_CONYUGE IS 'Nombre del Conyuge';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_PINUSUAR IS 'Codigo identificacion del usuario';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_ESTRATO IS 'Código de Estrato';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.EMAIL IS 'Dirección mail electrónico';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_USUARIO IS 'Codigo de Usuario';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_CUENTA IS 'Codigo de Cuenta';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_SUBCUENTA IS 'Codigo de Subcuenta';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NOM_USUARIO IS 'Nombre del Usuario';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NOM_APELLIDO1 IS 'Primer Apellido del Usuario';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.FEC_ALTA IS 'Fecha de alta';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_TIPIDENT IS 'Codigo de Tipo de Identificacion';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NUM_IDENT IS 'Numero de Identificacion';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.IND_ESTADO IS 'Indicativo de Estado (C)umplimentado/(S)in Cumplimentar';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NOM_APELLIDO2 IS 'Segundo Apellido del Usuario';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.FEC_NACIMIEN IS 'Fecha de Nacimiento';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_ESTCIVIL IS 'Estado Civil del Usuario (C)asado/(S)oltero/(D)ivorciado/(V)iudo/(O)tros';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.IND_SEXO IS 'Sexo del Usuario (V)aron/(M)ujer';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.IND_TIPOTRAB IS 'Tipo de Trabajador (E)mpleado/(A)utonomo';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.NOM_EMPRESA IS 'Nombre de Empresa';

COMMENT ON COLUMN SISCEL.GA_USUARIOS.COD_ACTEMP IS 'Codigo de Actividad Empresa';

