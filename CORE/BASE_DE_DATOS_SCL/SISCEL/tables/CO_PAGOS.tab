CREATE TABLE CO_PAGOS
(
  COD_TIPDOCUM         NUMBER(2)                NOT NULL,
  COD_CENTREMI         NUMBER(4)                NOT NULL,
  NUM_SECUENCI         NUMBER(8)                NOT NULL,
  COD_VENDEDOR_AGENTE  NUMBER(6)                NOT NULL,
  LETRA                VARCHAR2(1 BYTE)         NOT NULL,
  COD_CLIENTE          NUMBER(8)                NOT NULL,
  IMP_PAGO             NUMBER(14,4)             NOT NULL,
  FEC_EFECTIVIDAD      DATE                     NOT NULL,
  COD_CAJA             VARCHAR2(4 BYTE),
  FEC_VALOR            DATE                     NOT NULL,
  NOM_USUARORA         VARCHAR2(30 BYTE)        NOT NULL,
  COD_FORPAGO          NUMBER(1)                NOT NULL,
  COD_SISPAGO          NUMBER(2)                NOT NULL,
  COD_ORIPAGO          NUMBER(2)                NOT NULL,
  COD_CAUPAGO          NUMBER(2)                NOT NULL,
  COD_BANCO            VARCHAR2(15 BYTE),
  COD_TIPTARJETA       VARCHAR2(3 BYTE),
  COD_SUCURSAL         VARCHAR2(4 BYTE),
  CTA_CORRIENTE        VARCHAR2(18 BYTE),
  NUM_TARJETA          VARCHAR2(20 BYTE),
  DES_PAGO             VARCHAR2(40 BYTE),
  NUM_COMPAGO          NUMBER(12),
  IND_REGULARIZA       NUMBER(9)                DEFAULT NULL,
  PREF_PLAZA           VARCHAR2(25 BYTE),
  COD_CICLFACT_BAL     NUMBER(8)
)
TABLESPACE TS_RECYCOB_MDAT
PCTUSED    0
PCTFREE    10
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          4M
            NEXT             5M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CO_PAGOS IS 'Entradas contra Cartera';

COMMENT ON COLUMN CO_PAGOS.COD_TIPDOCUM IS 'CODIGO DE TIPO DE DOCUMENTO';

COMMENT ON COLUMN CO_PAGOS.COD_CENTREMI IS 'CODIGO DEL CENTRO EMISOR';

COMMENT ON COLUMN CO_PAGOS.NUM_SECUENCI IS 'Numero de secuencia del siguiente docume';

COMMENT ON COLUMN CO_PAGOS.COD_VENDEDOR_AGENTE IS 'Codigo de Agente';

COMMENT ON COLUMN CO_PAGOS.LETRA IS 'Letra de un documento';

COMMENT ON COLUMN CO_PAGOS.COD_CLIENTE IS 'Codigo de Cliente';

COMMENT ON COLUMN CO_PAGOS.IMP_PAGO IS 'Importe del Pago En Dolares';

COMMENT ON COLUMN CO_PAGOS.FEC_EFECTIVIDAD IS 'Fecha de Efectividad';

COMMENT ON COLUMN CO_PAGOS.COD_CAJA IS 'Codigo de Caja';

COMMENT ON COLUMN CO_PAGOS.FEC_VALOR IS 'Fecha en la que realmente se hizo efect.';

COMMENT ON COLUMN CO_PAGOS.NOM_USUARORA IS 'Nombre Usuario Oracle';

COMMENT ON COLUMN CO_PAGOS.COD_FORPAGO IS 'Formas de Pago';

COMMENT ON COLUMN CO_PAGOS.COD_SISPAGO IS 'Codigo de Sistema de Pago';

COMMENT ON COLUMN CO_PAGOS.COD_ORIPAGO IS 'Codigo de Origen del Pago';

COMMENT ON COLUMN CO_PAGOS.COD_CAUPAGO IS 'Codigo de Causa de Pago';

COMMENT ON COLUMN CO_PAGOS.COD_BANCO IS 'Codigo de Banco';

COMMENT ON COLUMN CO_PAGOS.COD_TIPTARJETA IS 'Codigo de Tarjeta';

COMMENT ON COLUMN CO_PAGOS.COD_SUCURSAL IS 'Codigo de Sucursal';

COMMENT ON COLUMN CO_PAGOS.CTA_CORRIENTE IS 'Cuenta Corriente';

COMMENT ON COLUMN CO_PAGOS.NUM_TARJETA IS 'NUMERO DE TARJETA';

COMMENT ON COLUMN CO_PAGOS.DES_PAGO IS 'Descripcion del Pago';

COMMENT ON COLUMN CO_PAGOS.NUM_COMPAGO IS 'Numero del comprobante de pago.';

COMMENT ON COLUMN CO_PAGOS.PREF_PLAZA IS 'Codigo de prefijo plaza';

COMMENT ON COLUMN CO_PAGOS.COD_CICLFACT_BAL IS 'CÓDIGO DE CICLO DEL BALANCE';
