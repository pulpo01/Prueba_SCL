CREATE TABLE PVH_RESTRICCIONES(
    COD_MODULO VARCHAR2(2) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  NUM_RESTRICCION NUMBER(5,0) NOT NULL 
 ,  TIP_RUTINA VARCHAR2(5) NOT NULL 
 ,  NOM_RUTINA VARCHAR2(50) NOT NULL 
 ,  DES_RUTINA VARCHAR2(100) NOT NULL 
 ,  PARAM_RESTRIC VARCHAR2(100) NULL 
 ,  FEC_ULTMOD DATE NOT NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ,  FLG_ACCION VARCHAR2(1) DEFAULT 'M' NOT NULL 
 ,  FEC_HISTORIA DATE DEFAULT SYSDATE NOT NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
