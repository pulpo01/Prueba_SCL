CREATE TABLE PV_RESTRICCIONES(
    COD_MODULO VARCHAR2(2) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  NUM_RESTRICCION NUMBER(5,0) NOT NULL 
 ,  TIP_RUTINA VARCHAR2(5) NOT NULL 
 ,  NOM_RUTINA VARCHAR2(50) NOT NULL 
 ,  DES_RUTINA VARCHAR2(100) NOT NULL 
 ,  PARAM_RESTRIC VARCHAR2(100) NULL 
 ,  FEC_ULTMOD DATE DEFAULT SYSDATE NOT NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  PV_RESTRICCIONES IS 'Restricciones generales.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.COD_MODULO IS 'Código de Modulo.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.COD_PRODUCTO IS 'Codigo de Producto.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.NUM_RESTRICCION IS 'Correlativo de restricción.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.TIP_RUTINA IS 'Tipo de rutina, pl, fk, etc.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.NOM_RUTINA IS 'Nombre de rutina.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.DES_RUTINA IS 'Descripción de rutina.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.PARAM_RESTRIC IS 'Paramatros de restricción.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.FEC_ULTMOD IS 'Fecha ultima modificaión.'
/
COMMENT ON COLUMN  PV_RESTRICCIONES.NOM_USUARIO IS 'Nombre de usuario.'
/
