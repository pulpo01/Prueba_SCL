CREATE TABLE CO_RECARGOS(
    COD_RNGCONCEP NUMBER(4,0) NOT NULL 
 ,  COD_CONCEPTO_GEN NUMBER(4,0) NOT NULL 
 ,  IND_PORCEN NUMBER(1,0) NOT NULL 
 ,  IMP_UMBRAL NUMBER(14,4) NOT NULL 
 ,  COD_TIPCANTI NUMBER(4,0) NULL 
 ,  COD_TIPPORCEN NUMBER(4,0) NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_RECARGOS IS 'RECARGOS'
/
COMMENT ON COLUMN  CO_RECARGOS.COD_RNGCONCEP IS 'RANGO DE CONCEPTOS'
/
COMMENT ON COLUMN  CO_RECARGOS.COD_CONCEPTO_GEN IS 'CODIGO DE CONCEPTO GENERADO'
/
COMMENT ON COLUMN  CO_RECARGOS.IND_PORCEN IS 'INDICA SI ES UN PORCENTAJE (1) O UNA CANTIDAD (0)'
/
COMMENT ON COLUMN  CO_RECARGOS.IMP_UMBRAL IS 'IMPORTE UMBRAL'
/
COMMENT ON COLUMN  CO_RECARGOS.COD_TIPCANTI IS 'TIPO DE CANTIDAD DE RECARGO'
/
COMMENT ON COLUMN  CO_RECARGOS.COD_TIPPORCEN IS 'TIPO DE PORCENTAJE'
/
