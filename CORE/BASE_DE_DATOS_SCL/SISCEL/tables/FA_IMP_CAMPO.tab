CREATE TABLE FA_IMP_CAMPO(
    COD_CAMPO NUMBER(4,0) NOT NULL 
 ,  COD_TIPCAMPO NUMBER(4,0) NOT NULL 
 ,  NUM_ANCHURA NUMBER(3,0) NOT NULL 
 ,  IND_VALORFIJO NUMBER(1,0) NOT NULL 
 ,  DES_VALORFIJO VARCHAR2(255) NULL 
 ,  IND_ALINEACION NUMBER(1,0) NOT NULL 
 ,  POS_DESPLAZA NUMBER(3,0) DEFAULT 0 NOT NULL 
 ,  TIP_DATO NUMBER(2,0) NOT NULL 
 ,  CHR_RELLENA VARCHAR2(1) NULL 
 ,  COD_GRUPOTOT NUMBER(4,0) NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_IMP_CAMPO IS 'Tabla de Campos a Imprimir- Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.COD_CAMPO IS 'Codigo de Campo - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.COD_TIPCAMPO IS 'Codigo de Tipo de Campo'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.NUM_ANCHURA IS 'Numero de Anchura - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.IND_VALORFIJO IS '0 => No Fijo 1 => Fijo - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.DES_VALORFIJO IS 'Descripcion de Valor Fijo - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.IND_ALINEACION IS 'Indicativo de Alineacion : 1=> Centro 2=> Derecha 3=> Izquierda - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.POS_DESPLAZA IS 'Posiciones de Desplazamiento - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.TIP_DATO IS '1 : Normal 2 : SubTotal Importe 3 : SubTotal Minutos 4: Sumatorio 5: Total Importe 6: Total Minutos - Retrofitted'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.CHR_RELLENA IS 'Caracter de Rellenado'
/
COMMENT ON COLUMN  FA_IMP_CAMPO.COD_GRUPOTOT IS 'Codigo de Grupo Impresion'
/
