CREATE TABLE CRH_PUTRETENCIONES
(
  TIPO_RETENCION        NUMBER(1)               NOT NULL,
  COD_CAURETENCION      NUMBER(2)               NOT NULL,
  FEC_MARCACION_DH      DATE                    NOT NULL,
  COD_ESTADORET         NUMBER(2)               NOT NULL,
  COD_OFICINA           VARCHAR2(2 BYTE)        NOT NULL,
  NOM_USUAMARCACION     VARCHAR2(30 BYTE)       NOT NULL,
  NOM_OPERSOLICITADOR   VARCHAR2(100 BYTE)      NOT NULL,
  COD_CLIENTE           NUMBER(8),
  COD_TIPDOCUM          NUMBER(2),
  NUM_FOLIO             NUMBER(9),
  COD_CICLFACT          NUMBER(8),
  FEC_ENTREGARET_DH     DATE,
  FEC_RECEPTOR_DH       DATE,
  FEC_DESMARCACION_DH   DATE,
  NOM_USUARECEPTOR      VARCHAR2(30 BYTE),
  NOM_USUAENTREGA       VARCHAR2(30 BYTE),
  NOM_USUADESMARCACION  VARCHAR2(30 BYTE),
  NOM_OPERRECEPTOR      VARCHAR2(100 BYTE),
  PREF_PLAZA            VARCHAR2(25 BYTE)       DEFAULT ' '                   NOT NULL
)
TABLESPACE TS_CRM_GENERAL_SDAT
PCTUSED    0
PCTFREE    10
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          40K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CRH_PUTRETENCIONES IS 'Tabla que contiene la informacion de las retenciones pedidas y su seguimiento.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.TIPO_RETENCION IS 'Tipo de retencion, puntual o permanente.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_CAURETENCION IS 'Causa o motivo de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.FEC_MARCACION_DH IS 'Fecha de marcacion de retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_ESTADORET IS 'Estado actual de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_OFICINA IS 'Oficina asociada a la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_USUAMARCACION IS 'Usuario que marco la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_OPERSOLICITADOR IS 'Solicitador de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_CLIENTE IS 'Codigo de cliente asociado a la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_TIPDOCUM IS 'Tipo de documento a retener.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NUM_FOLIO IS 'Folio o numero de documento a retener.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.COD_CICLFACT IS 'Ciclo de facturacion, caso facturas de ciclo.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.FEC_ENTREGARET_DH IS 'Fecha de recepcion de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.FEC_RECEPTOR_DH IS 'Fecha de entrega de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.FEC_DESMARCACION_DH IS 'Fecha de desmarcacion de la retencion, o se ano queda con retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_USUARECEPTOR IS 'Usuario que registra la entrega final de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_USUAENTREGA IS 'Usuario que registra la recepcionde la devolucion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_USUADESMARCACION IS 'Usuario que desmarca la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.NOM_OPERRECEPTOR IS 'Nombre del receptor de la entrega final de la retencion.';

COMMENT ON COLUMN CRH_PUTRETENCIONES.PREF_PLAZA IS 'Codigo de Plaza.';

