CREATE TABLE CM_CRITERIOS_PERFIL_TD(
    NUM_CRITERIO NUMBER(6,0) NOT NULL 
 ,  NUM_PERFIL NUMBER(6,0) NOT NULL 
 ,  NUM_PERIODO NUMBER(3,0) NOT NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ,  FEC_ULTMOD DATE NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CM_CRITERIOS_PERFIL_TD IS 'Perfil De Evaluacion Por Criterio Y Periodo.'
/
COMMENT ON COLUMN  CM_CRITERIOS_PERFIL_TD.NUM_CRITERIO IS 'NUMERO IDENTIFICADOR DEL CRITERIO DE VALORACION.'
/
COMMENT ON COLUMN  CM_CRITERIOS_PERFIL_TD.NUM_PERFIL IS 'NUMERO IDENTIFICADOR DEL PERFIL DE EVALUACION.'
/
COMMENT ON COLUMN  CM_CRITERIOS_PERFIL_TD.NUM_PERIODO IS 'PERIODO DE EVALUACION (0,1,2,3,...).'
/
COMMENT ON COLUMN  CM_CRITERIOS_PERFIL_TD.NOM_USUARIO IS 'USUARIO DE ULTIMA MODIFICACION.'
/
COMMENT ON COLUMN  CM_CRITERIOS_PERFIL_TD.FEC_ULTMOD IS 'FECHA DE ULTMA MODIFICACION.'
/
