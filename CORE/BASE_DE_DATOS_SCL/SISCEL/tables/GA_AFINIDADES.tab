CREATE TABLE GA_AFINIDADES(
    COD_AFINIDAD NUMBER(3,0) NOT NULL 
 ,  DES_AFINIDAD VARCHAR2(40) NOT NULL 
 ,  ORI_AFINIDAD VARCHAR2(1) NULL 
 ,  CAN_MIN_ABONADOS NUMBER(5,0) DEFAULT 0 NOT NULL 
 ,  CAN_MAX_CAMBPLAN NUMBER(5,0) DEFAULT 0 NOT NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  GA_AFINIDADES IS 'Tabla de Afinidades'
/
COMMENT ON COLUMN  GA_AFINIDADES.COD_AFINIDAD IS 'Codigo de afinidad'
/
COMMENT ON COLUMN  GA_AFINIDADES.DES_AFINIDAD IS 'Descripcion de la afinidad'
/
COMMENT ON COLUMN  GA_AFINIDADES.ORI_AFINIDAD IS 'Origen de la afinidad'
/
COMMENT ON COLUMN  GA_AFINIDADES.CAN_MIN_ABONADOS IS 'Cantidad minima de abonados para la afinidad'
/
COMMENT ON COLUMN  GA_AFINIDADES.CAN_MAX_CAMBPLAN IS 'Cantidad maxima de abonados por cambio de plan a aceptar para la afinidad'
/
