CREATE TABLE CO_PAGARE(
    NUM_PAGARE NUMBER(8,0) NOT NULL 
 ,  TIP_DOCUMEN NUMBER(2,0) NOT NULL 
 ,  FEC_PRIMERVEN DATE NOT NULL 
 ,  COD_CLIENTE NUMBER(8,0) NOT NULL 
 ,  FACTOR_IND NUMBER(4,2) NOT NULL 
 ,  FEC_VALOR DATE NOT NULL 
 ,  IND_PROCESO NUMBER(1,0) NOT NULL 
 ,  NUM_CUOTAS NUMBER(3,0) NOT NULL 
 ,  NUM_DIAS NUMBER(2,0) NOT NULL 
 ,  FEC_CANCELA DATE NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_PAGARE IS 'REFINANCIAMIENTO DE LA DEUDA'
/
COMMENT ON COLUMN  CO_PAGARE.NUM_PAGARE IS 'NUMERO DEL PAGARE'
/
COMMENT ON COLUMN  CO_PAGARE.TIP_DOCUMEN IS 'TIPO DE DOCUMENTO PAGARE'
/
COMMENT ON COLUMN  CO_PAGARE.FEC_PRIMERVEN IS 'Fecha Primer vencimiento - Retrofitted'
/
COMMENT ON COLUMN  CO_PAGARE.COD_CLIENTE IS 'CODIGO DE CLIENTE'
/
COMMENT ON COLUMN  CO_PAGARE.FACTOR_IND IS 'FACTOR PARA EL CALCULO DE LAS CUOTAS'
/
COMMENT ON COLUMN  CO_PAGARE.FEC_VALOR IS 'FECHA DE ELABORACION DEL PAGARE'
/
COMMENT ON COLUMN  CO_PAGARE.IND_PROCESO IS 'INDICA SI EL PAGARE ESTA PROCESADO'
/
COMMENT ON COLUMN  CO_PAGARE.NUM_CUOTAS IS 'NUMERO DE CUOTAS QUE COMPONE EL PAGARE'
/
COMMENT ON COLUMN  CO_PAGARE.NUM_DIAS IS 'NUMERO DE DIAS'
/
COMMENT ON COLUMN  CO_PAGARE.FEC_CANCELA IS 'FECHA DE CANCELACION DEL PAGARE'
/
