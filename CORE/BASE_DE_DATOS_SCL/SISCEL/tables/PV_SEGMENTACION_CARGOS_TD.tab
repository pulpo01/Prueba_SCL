COMMENT ON COLUMN  PV_SEGMENTACION_CARGOS_TD.TIPO_VALOR IS 'Tipo de Valor'
/
COMMENT ON COLUMN  PV_SEGMENTACION_CARGOS_TD.IMP_CARGO IS 'Valor del Cargo'
