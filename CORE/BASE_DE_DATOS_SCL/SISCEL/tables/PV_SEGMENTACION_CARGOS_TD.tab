 ,  TIPO_CARGO NUMBER(1,0) NOT NULL 
 ,  COD_CONCEPTO NUMBER(9,0) NOT NULL 
 ,  TIPO_VALOR VARCHAR2(1) NOT NULL 
 ,  IMP_CARGO NUMBER(14,4) NOT NULL 
 ,  COD_MONEDA VARCHAR2(3) NOT NULL 
 ,  NOM_USUARIO VARCHAR2(255) NOT NULL 
 ,  FEC_DESDE DATE NOT NULL 
 ,  FEC_HASTA DATE NULL 
 ,  TIPO_SEG_ORIG VARCHAR2(5) NOT NULL 
 ,  TIPO_SEG_DES VARCHAR2(5) NOT NULL 
 ) TABLESPACE    INSTALL_DATA
 NOLOGGING
 NOCACHE
 NOPARALLEL
/
