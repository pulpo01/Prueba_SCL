CREATE TABLE FAT_BALANCE(
    COD_CLIENTE NUMBER(8,0) NOT NULL 
 ,  COD_ITEM NUMBER(2,0) NOT NULL 
 ,  COD_TIPDOCUM NUMBER(2,0) NOT NULL 
 ,  COD_CICLFACT NUMBER(6,0) NOT NULL 
 ,  CAN_DOCUMENTO NUMBER(5,0) DEFAULT 0 NOT NULL 
 ,  IMP_DOCUMENTO NUMBER(14,4) DEFAULT 0 NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FAT_BALANCE IS 'Tabla De Balance De Cuenta Corriente.'
/
COMMENT ON COLUMN  FAT_BALANCE.COD_CLIENTE IS 'Cliente sobre el que se aplica el respectivo balance..'
/
COMMENT ON COLUMN  FAT_BALANCE.COD_ITEM IS 'Codigo del item de balance al que se asigna..'
/
COMMENT ON COLUMN  FAT_BALANCE.COD_TIPDOCUM IS 'Codigo de tipo de documento de cobro. (GE_TIPDOCUMEN)..'
/
COMMENT ON COLUMN  FAT_BALANCE.COD_CICLFACT IS 'Ciclo de facturacion donde se obtuvo el balance.'
/
COMMENT ON COLUMN  FAT_BALANCE.CAN_DOCUMENTO IS 'Cantidad de documentos seleccionados.'
/
COMMENT ON COLUMN  FAT_BALANCE.IMP_DOCUMENTO IS 'Importe total del Documento.'
/
