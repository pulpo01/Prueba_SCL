CREATE TABLE SISCEL.GE_SEG_USUARIO
(
  NOM_USUARIO        VARCHAR2(30 BYTE)          NOT NULL,
  NOM_OPERADOR       VARCHAR2(40 BYTE)          NOT NULL,
  IND_ADM            VARCHAR2(1 BYTE)           NOT NULL,
  COD_OFICINA        VARCHAR2(2 BYTE),
  COD_TIPCOMIS       VARCHAR2(2 BYTE),
  COD_VENDEDOR       NUMBER(6),
  IND_EXCEP_ERIESGO  VARCHAR2(1 BYTE)           DEFAULT 'N',
  IND_ACTIVO         VARCHAR2(1 BYTE)           DEFAULT 'Y',
  NOM_EMAIL          VARCHAR2(100 BYTE)         DEFAULT NULL,
  IND_VISUAL         NUMBER(1)                  DEFAULT 0
)  TABLESPACE TS_GENERAL_SDAT
/


COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.NOM_USUARIO IS 'Nombre de Usuario';

COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.NOM_OPERADOR IS 'Descripcion del Usuario';

COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.IND_EXCEP_ERIESGO IS 'Usuario puede o no aplicar Excepciones en Evaluación de Riesgo';

COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.IND_ACTIVO IS 'Indicador ( Y o N )de usuarios activos en el CRM con el active directory y base de datos';

COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.NOM_EMAIL IS 'Correo Electronico Usuario';

COMMENT ON COLUMN SISCEL.GE_SEG_USUARIO.IND_VISUAL IS '0: Despliegue parcial ; 1:Despliegue total';

