CREATE TABLE PV_ARCOS(
    COD_MODGENER VARCHAR2(3) NOT NULL 
 ,  COD_APLIC VARCHAR2(3) DEFAULT 'PVA' NOT NULL 
 ,  EST_INICIAL NUMBER(3,0) NOT NULL 
 ,  EST_FINAL NUMBER(3,0) NOT NULL 
 ,  COD_PROCESO NUMBER(3,0) NOT NULL 
 ,  ATRIB_ESTADO NUMBER(1,0) NOT NULL 
 ,  CONDICION VARCHAR2(3) NULL 
 ,  FEC_DESDE DATE NOT NULL 
 ,  FEC_HASTA DATE NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  PV_ARCOS IS 'Arcos Por Modo De Generacion.'
/
COMMENT ON COLUMN  PV_ARCOS.COD_MODGENER IS 'Codigo de modo de generacion.'
/
COMMENT ON COLUMN  PV_ARCOS.COD_APLIC IS 'Aplicacion de interfaz al que pertenece.'
/
COMMENT ON COLUMN  PV_ARCOS.EST_INICIAL IS 'Estado inicial.'
/
COMMENT ON COLUMN  PV_ARCOS.EST_FINAL IS 'Estado final.'
/
COMMENT ON COLUMN  PV_ARCOS.COD_PROCESO IS 'Codigo de proceso.'
/
COMMENT ON COLUMN  PV_ARCOS.ATRIB_ESTADO IS 'atributo del estado: 0 = Normal, 1 = inicial, 2 = final.'
/
COMMENT ON COLUMN  PV_ARCOS.CONDICION IS 'diferencia cuando un estado de inicio posee mas de un destino.'
/
COMMENT ON COLUMN  PV_ARCOS.FEC_DESDE IS 'Fecha de inicio de valildez del arco.'
/
COMMENT ON COLUMN  PV_ARCOS.FEC_HASTA IS 'Fecha hasta que es valido el arco Null indica actualmente valido.'
/
