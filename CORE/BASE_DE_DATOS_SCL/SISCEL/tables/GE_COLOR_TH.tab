CREATE TABLE GE_COLOR_TH (  
   COD_COLOR                     VARCHAR2(5)                                     NOT NULL  
 , DES_COLOR                     VARCHAR2(30)                                     NOT NULL  
 , IND_VIGENCIA                  VARCHAR2(1)                                     NOT NULL  
 , FEC_CREACION                  DATE                                          DEFAULT  SYSDATE NOT NULL  
 , NOM_USUARIO                   VARCHAR2(30)                                     NOT NULL
 ) TABLESPACE INSTALL_DATA
/


COMMENT ON TABLE  GE_COLOR_TH                      IS '[ COTH ] TABLA HIST. COLORES DE LOS CLIENTES'
/

COMMENT ON COLUMN GE_COLOR_TH.COD_COLOR                      IS 'Código del Color del Cliente'
/
COMMENT ON COLUMN GE_COLOR_TH.DES_COLOR                      IS 'Descripcion del Color del Cliente'
/
COMMENT ON COLUMN GE_COLOR_TH.IND_VIGENCIA                   IS 'Indicador de vigencia'
/
COMMENT ON COLUMN GE_COLOR_TH.FEC_CREACION                   IS 'Fecha de Creación del registro'
/
COMMENT ON COLUMN GE_COLOR_TH.NOM_USUARIO                    IS 'Usuario que genero el registro'
/


