CREATE TABLE ERD_CAMPOS_ACTIVOS(
    COD_CAMPO NUMBER(6,0) NOT NULL 
 ,  COD_PRODUCTO NUMBER(6,0) NOT NULL 
 ,  NOM_USUARIO_MODI VARCHAR2(30) NOT NULL 
 ,  FEC_MODI_H DATE NOT NULL 
 ) TABLESPACE    TS_CRM_GENERAL_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  ERD_CAMPOS_ACTIVOS IS 'Definicion De Los Campos De Informacion Activos En El Sistema.'
/
COMMENT ON COLUMN  ERD_CAMPOS_ACTIVOS.COD_CAMPO IS 'Identificador unico para el campo de informacion. Ver tabla ERD_CAMPOS.'
/
COMMENT ON COLUMN  ERD_CAMPOS_ACTIVOS.COD_PRODUCTO IS 'Identificador unico para el producto o informe. Ver tabla ERD_PRODUCTOS.'
/
COMMENT ON COLUMN  ERD_CAMPOS_ACTIVOS.NOM_USUARIO_MODI IS 'Nombre del usuario que creo/actualizo este registro.'
/
COMMENT ON COLUMN  ERD_CAMPOS_ACTIVOS.FEC_MODI_H IS 'fecha de creacion/modificacion de este registro.'
/
