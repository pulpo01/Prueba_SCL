CREATE TABLE VE_VENTADTOS(
    NUM_VENTA NUMBER(9,0) NOT NULL 
 ,  NUM_ITEM NUMBER(9,0) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  IMP_VENTA NUMBER(12,4) NOT NULL 
 ,  IND_DTO NUMBER(1,0) NOT NULL 
 ,  VAL_DTO NUMBER(12,4) NOT NULL 
 ,  NUM_UNIDADES NUMBER(6,0) NOT NULL 
 ,  IND_ACEPTA NUMBER(1,0) NOT NULL 
 ,  COD_CTODTO NUMBER(4,0) NOT NULL 
 ,  COD_ARTICULO NUMBER(6,0) NULL 
 ) TABLESPACE    TS_CRM_GESTION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  VE_VENTADTOS IS 'Almacena importes de venta y descuentos aplicados hasta la aceptacion de la venta'
/
COMMENT ON COLUMN  VE_VENTADTOS.NUM_VENTA IS 'Numero de la venta'
/
COMMENT ON COLUMN  VE_VENTADTOS.NUM_ITEM IS 'Numero de item dentro de cada venta'
/
COMMENT ON COLUMN  VE_VENTADTOS.COD_PRODUCTO IS 'Codigo del Producto'
/
COMMENT ON COLUMN  VE_VENTADTOS.IMP_VENTA IS 'Importe de la venta'
/
COMMENT ON COLUMN  VE_VENTADTOS.IND_DTO IS 'Indicativo de tipo descuento (0) - Monto / (1) - Porcentaje'
/
COMMENT ON COLUMN  VE_VENTADTOS.VAL_DTO IS 'Valor del descuento aplicado'
/
COMMENT ON COLUMN  VE_VENTADTOS.NUM_UNIDADES IS 'Numero de unidades'
/
COMMENT ON COLUMN  VE_VENTADTOS.IND_ACEPTA IS 'Indicativo de aceptacion de la venta'
/
COMMENT ON COLUMN  VE_VENTADTOS.COD_CTODTO IS 'Codigo concepto descuento'
/
COMMENT ON COLUMN  VE_VENTADTOS.COD_ARTICULO IS 'Codigo del Articulo'
/
