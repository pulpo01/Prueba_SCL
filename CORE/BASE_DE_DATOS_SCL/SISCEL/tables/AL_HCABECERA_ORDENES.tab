CREATE TABLE AL_HCABECERA_ORDENES
(
  NUM_ORDEN        NUMBER(9)                    NOT NULL,
  TIP_ORDEN        NUMBER(1)                    NOT NULL,
  FEC_HISTORICO    DATE                         NOT NULL,
  COD_PROVEEDOR    NUMBER                           NULL,
  COD_BODEGA       NUMBER(6)                        NULL,
  FEC_CREACION     DATE                             NULL,
  COD_SECTOR       NUMBER(2)                        NULL,
  COD_TRANSP       NUMBER(2)                        NULL,
  TIP_PEDIDO       NUMBER(1)                        NULL,
  FEC_AUTORIZA     DATE                             NULL,
  FEC_EMBARQUE     DATE                             NULL,
  FEC_ARRIBO       DATE                             NULL,
  COD_MONEDA       VARCHAR2(3 BYTE)                 NULL,
  COD_ESTADO       VARCHAR2(2 BYTE)                 NULL,
  PCT_IVA          NUMBER(5,2)                      NULL,
  TOT_ARANCEL_EST  NUMBER(14,2)                     NULL,
  TOT_FLETE_EST    NUMBER(14)                       NULL,
  TOT_SEGURO_EST   NUMBER(14,2)                     NULL,
  TIP_ORDEN_REF    NUMBER(1)                        NULL,
  NUM_ORDEN_REF    NUMBER(9)                        NULL,
  USU_CREACION     VARCHAR2(30 BYTE)                NULL,
  USU_AUTORIZA     VARCHAR2(30 BYTE)                NULL,
  COD_ACCION       NUMBER(1)                    DEFAULT 1                         NULL,
  NUM_ORDEN_PROV   VARCHAR2(25 BYTE)                NULL,
  TIP_NUMERACION   NUMBER(1)                        NULL,
  PLAN             VARCHAR2(3 BYTE)                 NULL,
  CARGA            NUMBER(14,4)                     NULL,
  COD_GRPCONCEPTO  NUMBER(6)                        NULL,
  NUM_ORDEN_SAP    VARCHAR2(15 BYTE)                NULL
)
TABLESPACE TS_LOGISTICA_SDAT
PCTUSED    0
PCTFREE    10
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          128K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE AL_HCABECERA_ORDENES IS 'Historico de Cabeceras de Ordenes';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.NUM_ORDEN_SAP IS 'Número orden de compra SAP';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.NUM_ORDEN IS 'Numero de Orden';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TIP_ORDEN IS 'Tipo de Orden';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.FEC_HISTORICO IS 'Fecha Histsrico';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_PROVEEDOR IS 'Proveedor';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_BODEGA IS 'Bodega';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.FEC_CREACION IS 'Fecha de Creacion';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_SECTOR IS 'Codigo de Sector Solicitante';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_TRANSP IS 'Transporte a utilizar en el transporte de la mercancia.';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TIP_PEDIDO IS 'Tipo Orden de Compra';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.FEC_AUTORIZA IS 'Fecha de Autorizacion';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.FEC_EMBARQUE IS 'Fecha de Embarque';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.FEC_ARRIBO IS 'Fecha prevista de entrega';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_MONEDA IS 'Codigo de moneda';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_ESTADO IS 'Estado';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.PCT_IVA IS 'Porcentaje de IVA';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TOT_ARANCEL_EST IS 'Gastos aduanas y aranceles';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TOT_FLETE_EST IS 'Valor del flete';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TOT_SEGURO_EST IS 'Gastos seguros y otros';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TIP_ORDEN_REF IS 'Tipo de Orden de la que proviene';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.NUM_ORDEN_REF IS 'Numero de Orden generadora';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.USU_CREACION IS 'Usuario creador';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.USU_AUTORIZA IS 'Usuario Autorizante';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.COD_ACCION IS 'Accion a realizar';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.NUM_ORDEN_PROV IS 'Numero Orden Proveedor';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.TIP_NUMERACION IS 'Tipo de numeracion: 0,1,2';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.PLAN IS 'Plan de Prepago';

COMMENT ON COLUMN AL_HCABECERA_ORDENES.CARGA IS 'Carga de prepago';
