CREATE TABLE PV_CAUSABLODESQ
(
  COD_PRODUCTO      NUMBER(1)                   NOT NULL,
  COD_CAUSABLODES   VARCHAR2(2 BYTE)            NOT NULL,
  DES_CAUSABLODES   VARCHAR2(30 BYTE),
  FEC_INI_VIGENCIA  DATE                        DEFAULT SYSDATE               NOT NULL,
  FEC_FIN_VIGENCIA  DATE,
  IND_DESBLOQ       VARCHAR2(2 BYTE),
  IND_LN            NUMBER(1),
  IND_COBRO         NUMBER(1),
  IND_PORTABLE      NUMBER(1),
  IND_FRAUDE        NUMBER(1)                   DEFAULT 0,
  COD_TIPFRAUDE     VARCHAR2(3 BYTE),
  IND_SMSPROMO      NUMBER(1),
  TIP_SUSPENCION    VARCHAR2(2 BYTE),
  IND_EIR           NUMBER(1)                   DEFAULT 0                     NOT NULL
)
TABLESPACE INSTALL_DATA
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          1M
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOLOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE PV_CAUSABLODESQ IS '[ PV_CAUSABLODESQ ] Causas de Bloqueo/Desbloqueo';

COMMENT ON COLUMN PV_CAUSABLODESQ.COD_PRODUCTO IS 'codigo del producto';

COMMENT ON COLUMN PV_CAUSABLODESQ.COD_CAUSABLODES IS 'codigo bloqueo';

COMMENT ON COLUMN PV_CAUSABLODESQ.DES_CAUSABLODES IS 'descripcion causa bloqueo';

COMMENT ON COLUMN PV_CAUSABLODESQ.FEC_INI_VIGENCIA IS 'fecha inicio vigencia';

COMMENT ON COLUMN PV_CAUSABLODESQ.FEC_FIN_VIGENCIA IS 'fecha fin vigencia';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_DESBLOQ IS 'indicador de Bloqueo B: Bloqueo D:Desbloqueo';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_LN IS 'indicador de listas negras';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_COBRO IS 'indicador de cobro';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_PORTABLE IS 'indicador portable';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_FRAUDE IS 'indicador de fraude';

COMMENT ON COLUMN PV_CAUSABLODESQ.COD_TIPFRAUDE IS 'codigo  fraude';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_SMSPROMO IS 'indciador SMS Promocional ';

COMMENT ON COLUMN PV_CAUSABLODESQ.TIP_SUSPENCION IS 'Tipo de suspencion ';

COMMENT ON COLUMN PV_CAUSABLODESQ.IND_EIR IS 'Indicador de lista EIR';
