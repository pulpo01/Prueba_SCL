CREATE TABLE AL_ATRIBUTOS(
    COD_ATRIBUTO NUMBER(3,0) NOT NULL 
 ,  DES_ATRIBUTO VARCHAR2(30) NOT NULL 
 ,  TIP_DATO VARCHAR2(8) NOT NULL 
 ,  LON_DATO NUMBER(5,1) NOT NULL 
 ) TABLESPACE    TS_LOGISTICA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  AL_ATRIBUTOS IS 'Atributos Asociables a Articulos'
/
COMMENT ON COLUMN  AL_ATRIBUTOS.COD_ATRIBUTO IS 'Codigo de Atributo'
/
COMMENT ON COLUMN  AL_ATRIBUTOS.DES_ATRIBUTO IS 'Descripcion de Atributo'
/
COMMENT ON COLUMN  AL_ATRIBUTOS.TIP_DATO IS 'Tipo de Datos (VARCHAR2, NUMBER, DATE)'
/
COMMENT ON COLUMN  AL_ATRIBUTOS.LON_DATO IS 'Longitud del dato'
/
