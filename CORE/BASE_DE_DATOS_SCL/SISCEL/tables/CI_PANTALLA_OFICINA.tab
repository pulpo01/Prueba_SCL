 ,  COD_PANTALLA NUMBER(3,0) NOT NULL 
 ,  IND_ENTRADA CHAR(1) NOT NULL 
 ) TABLESPACE    TS_CRM_GENERAL_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CI_PANTALLA_OFICINA IS 'Relaciona oficina v/s pantalla '
/
COMMENT ON COLUMN  CI_PANTALLA_OFICINA.COD_OFICINA IS 'Csdigo de Oficina'
/
COMMENT ON COLUMN  CI_PANTALLA_OFICINA.COD_PANTALLA IS 'Csdigo de pantalla a donde debe llegar una oficina al entrar'
/
COMMENT ON COLUMN  CI_PANTALLA_OFICINA.IND_ENTRADA IS 'Indicador del tipo de entrada para gatillar lo anterior'
/
