CREATE TABLE TA_PLANTIPDIA(
    COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  COD_OPERADOR VARCHAR2(5) NOT NULL 
 ,  COD_PLANTARIF VARCHAR2(3) NOT NULL 
 ,  COD_TIPDIA VARCHAR2(2) NOT NULL 
 ,  FEC_DESDE DATE DEFAULT SYSDATE NOT NULL 
 ,  FEC_HASTA DATE NULL 
 ) TABLESPACE    TS_TARIFICACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  TA_PLANTIPDIA IS 'Planes con tipos de dias especiales'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.COD_PRODUCTO IS 'Codigo de Producto'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.COD_OPERADOR IS 'Codigo de Operador'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.COD_PLANTARIF IS 'Codigo de Plan Tarifario'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.COD_TIPDIA IS 'Codigo de Tipo de Dia Nuevo'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.FEC_DESDE IS 'Fecha de Ingreso de registro'
/
COMMENT ON COLUMN  TA_PLANTIPDIA.FEC_HASTA IS 'Fecha de termino de vigencia'
/
