CREATE TABLE AL_ESTADOS(
    COD_ESTADO NUMBER(2,0) NOT NULL 
 ,  DES_ESTADO VARCHAR2(20) NOT NULL 
 ,  IND_DISPONIBILIDAD NUMBER(1,0) DEFAULT 1 NOT NULL 
 ) TABLESPACE    TS_LOGISTICA_SDAT
 LOGGING
 CACHE
 NOPARALLEL
/
COMMENT ON TABLE  AL_ESTADOS IS 'Diferentes estados por los que podra pasar un articulo'
/
COMMENT ON COLUMN  AL_ESTADOS.COD_ESTADO IS 'Codigo identificativo del estado.'
/
COMMENT ON COLUMN  AL_ESTADOS.DES_ESTADO IS 'Descripcion del estado.'
/
COMMENT ON COLUMN  AL_ESTADOS.IND_DISPONIBILIDAD IS 'Indicativo de disponibilidad del articulo.'
/
