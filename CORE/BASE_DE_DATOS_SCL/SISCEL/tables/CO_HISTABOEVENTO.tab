CREATE TABLE CO_HISTABOEVENTO(
    COD_EVENTO NUMBER(8,0) NOT NULL 
 ,  NUM_ABONADO NUMBER(8,0) NOT NULL 
 ,  COD_CLIENTE NUMBER(8,0) NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NULL 
 ,  FECHA_ALTA DATE NOT NULL 
 ,  NOM_USUALTA VARCHAR2(30) NOT NULL 
 ,  IMP_DEUDA NUMBER(14,4) NOT NULL 
 ,  FEC_HISTORICO DATE NOT NULL 
 ,  NOM_USUAHIST VARCHAR2(30) NOT NULL 
 ,  CAUSA_EXCLUSION VARCHAR2(60) NOT NULL 
 ,  COD_ESTADO VARCHAR2(2) NOT NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_HISTABOEVENTO IS 'Tabla de historico de los abonados asociados a eventos'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.COD_EVENTO IS 'Csdigo de evento'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.NUM_ABONADO IS 'Nzmero de abonado'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.COD_CLIENTE IS 'Codigo de cliente'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.COD_PRODUCTO IS 'Producto'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.FECHA_ALTA IS 'Fecha de alta en la tabla'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.NOM_USUALTA IS 'Usuario que le ha dado de lata en la tabla'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.IMP_DEUDA IS 'Importe total que el cliente adeuda'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.FEC_HISTORICO IS 'Fecha del paso a historico'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.NOM_USUAHIST IS 'Nombre del usuario del paso a historico'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.CAUSA_EXCLUSION IS 'Motivo por el que el cliente ha sido excluido del evento y pasado a historicos'
/
COMMENT ON COLUMN  CO_HISTABOEVENTO.COD_ESTADO IS 'Estado en el que se encuentra el cliente'
/
