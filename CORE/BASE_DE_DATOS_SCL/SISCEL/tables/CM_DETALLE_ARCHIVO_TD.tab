CREATE TABLE CM_DETALLE_ARCHIVO_TD(
    COD_UNIVERSO VARCHAR2(6) NOT NULL 
 ,  COD_ARCHIVO VARCHAR2(10) NOT NULL 
 ,  NOM_CAMPO VARCHAR2(30) NOT NULL 
 ,  NUM_ORDEN NUMBER(3,0) NOT NULL 
 ,  LARGO_CAMPO NUMBER(6,0) NOT NULL 
 ,  IND_JUSTIFICADO CHAR(1) DEFAULT 'I' NULL 
 ,  CAR_RELLENO CHAR(1) DEFAULT ' ' NULL 
 ,  FEC_CREACION DATE NULL 
 ,  NOM_USUARIO VARCHAR2(30) NULL 
 ,  NOM_ETIQUETA VARCHAR2(30) NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CM_DETALLE_ARCHIVO_TD IS '[ DETARCH ] Tabla de detalles de archivos por campos del UniversosTabla de detalles de archivos por campos del Universos'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.COD_UNIVERSO IS 'UNIVERSO SOBRE EL QUE SE CREA EL ARCHIVO'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.COD_ARCHIVO IS 'ARCHIVO SOBRE EL QUE SE APLICA EL DETALLE'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.NOM_CAMPO IS 'CAMPO INCLUIDO EN EL DETALLE EL ARCHIVO'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.NUM_ORDEN IS 'POSICION DEL CAMPO DENTRO DEL ARCHIVO'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.LARGO_CAMPO IS 'LARGO DEL CAMPO DENTRO DEL ARCHIVO'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.IND_JUSTIFICADO IS 'JUSTIFICADO DEL CAMPO (I:IZQUIERDA, D:DERECHA)'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.CAR_RELLENO IS 'CARACTER DE RELLENO PARA EL CAMPO (BLANCO, 0)'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.FEC_CREACION IS 'FECHA DE CREACION DEL DETALLE'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.NOM_USUARIO IS 'USUARIO DE CREACISN DEL REGISTRO'
/
COMMENT ON COLUMN  CM_DETALLE_ARCHIVO_TD.NOM_ETIQUETA IS 'ETIQUETA ASOCIADA A LA COLUMNA'
/
