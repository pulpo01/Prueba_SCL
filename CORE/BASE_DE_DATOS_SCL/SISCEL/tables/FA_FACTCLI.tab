CREATE TABLE FA_FACTCLI(
    COD_CLIENTE NUMBER(8,0) NOT NULL 
 ,  IND_PENALIZA NUMBER(1,0) NOT NULL 
 ,  IND_PAGARE NUMBER(1,0) NOT NULL 
 ,  IND_CARGOS NUMBER(1,0) NOT NULL 
 ,  FEC_ULTPAGARE DATE NOT NULL 
 ,  FEC_ULTPENALIZA DATE NOT NULL 
 ,  FEC_ULTCARGOS DATE NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_FACTCLI IS 'Cargos a nivel de Cliente en Ciclo'
/
COMMENT ON COLUMN  FA_FACTCLI.COD_CLIENTE IS 'Codigo de Cliente'
/
COMMENT ON COLUMN  FA_FACTCLI.IND_PENALIZA IS 'Indicador de si el Cliente tiene un penalizacion por el SAC'
/
COMMENT ON COLUMN  FA_FACTCLI.IND_PAGARE IS 'Cuota de Pagare perteneciente a un cliente'
/
COMMENT ON COLUMN  FA_FACTCLI.IND_CARGOS IS 'Cargos a nivel de cliente'
/
COMMENT ON COLUMN  FA_FACTCLI.FEC_ULTPAGARE IS 'Fecha de Ultimo Pagare Incorporado'
/
COMMENT ON COLUMN  FA_FACTCLI.FEC_ULTPENALIZA IS 'Fecha de Ultima Penalizacion Incorporada'
/
COMMENT ON COLUMN  FA_FACTCLI.FEC_ULTCARGOS IS 'Fecha de Ultimos Cargos Incorporados'
/
