CREATE TABLE ER_NIVEL_AUTORIZACION(
    NIVEL NUMBER(3,0) NOT NULL 
 ,  LOGIN VARCHAR2(12) NOT NULL 
 ,  RESPONSABLE VARCHAR2(12) NULL 
 ,  FECHA_INGRESO NUMBER(8,0) NULL 
 ,  FECHA_ACTUAL NUMBER(8,0) NULL 
 ,  HORA_ACTUAL NUMBER(6,0) NULL 
 ,  FECHA DATE NULL 
 ,  IND_HABILITADO NUMBER(1,0) NULL 
 ,  IND_NIVEL NUMBER(1,0) NULL 
 ) TABLESPACE    TS_CRM_GENERAL_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  ER_NIVEL_AUTORIZACION IS 'Nivel de Autorizacion'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.NIVEL IS 'Nivel del encargado de la autorizacion'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.LOGIN IS 'Login del responsable'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.RESPONSABLE IS 'Responsable'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.FECHA_INGRESO IS 'Fecha de ingreso'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.FECHA_ACTUAL IS 'Fecha actual'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.HORA_ACTUAL IS 'Hora actual'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.FECHA IS 'Fecha de ingreso'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.IND_HABILITADO IS 'Indicador de habilitacion: 0=habilitado | 1=inhabilitado.'
/
COMMENT ON COLUMN  ER_NIVEL_AUTORIZACION.IND_NIVEL IS 'Indicador de cardinalidad de nivel: 0=un nivel de aprobacion | 1=mas de un nivel de aprobacion.'
/
