CREATE TABLE CO_DETEVENTO(
    COD_EVENTO NUMBER(8,0) NOT NULL 
 ,  IMP_DESDE NUMBER(14,4) NOT NULL 
 ,  IMP_HASTA NUMBER(14,4) NOT NULL 
 ,  DIAS_DESDE NUMBER(3,0) NOT NULL 
 ,  DIAS_HASTA NUMBER(3,0) NOT NULL 
 ,  IND_PAC NUMBER(1,0) DEFAULT 0 NOT NULL 
 ,  IND_SAC NUMBER(1,0) DEFAULT 0 NOT NULL 
 ,  FEC_CREACION DATE NOT NULL 
 ,  IND_NIVEL_TRAFICO CHAR(1) NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_DETEVENTO IS 'Tabla detalle del evento'
/
COMMENT ON COLUMN  CO_DETEVENTO.COD_EVENTO IS 'Csdigo de evento'
/
COMMENT ON COLUMN  CO_DETEVENTO.IMP_DESDE IS 'Importe inicial'
/
COMMENT ON COLUMN  CO_DETEVENTO.IMP_HASTA IS 'Importe final'
/
COMMENT ON COLUMN  CO_DETEVENTO.DIAS_DESDE IS 'Nzmero de dmas iniciales'
/
COMMENT ON COLUMN  CO_DETEVENTO.DIAS_HASTA IS 'Nzmero de dmas finales'
/
COMMENT ON COLUMN  CO_DETEVENTO.IND_PAC IS 'Indicador de bancos PAC'
/
COMMENT ON COLUMN  CO_DETEVENTO.IND_SAC IS 'Indicador reclamos SAC'
/
COMMENT ON COLUMN  CO_DETEVENTO.IND_NIVEL_TRAFICO IS 'Nivel de trafico del cliente: A=trafico alto | M=trafico medio | Bajo=trafico bajo'
/
