CREATE TABLE FAD_CONCEVAL(
    COD_GRUPO NUMBER(6,0) NOT NULL 
 ,  COD_CONCEPTO NUMBER(4,0) NOT NULL 
 ,  FEC_DESDE DATE NOT NULL 
 ,  FEC_HASTA DATE NOT NULL 
 ,  IND_OBLIGA VARCHAR2(1) NOT NULL 
 ,  MTO_MINFACT NUMBER(6,0) DEFAULT 0 NOT NULL 
 ,  FEC_ULTMOD DATE NOT NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FAD_CONCEVAL IS 'Grupos de Conceptos para Evaluacisn de Descuentos'
/
COMMENT ON COLUMN  FAD_CONCEVAL.COD_GRUPO IS 'Codigo de grupo'
/
COMMENT ON COLUMN  FAD_CONCEVAL.COD_CONCEPTO IS 'Codigo concepto'
/
COMMENT ON COLUMN  FAD_CONCEVAL.FEC_DESDE IS 'Fecha Inicio de Vigencia'
/
COMMENT ON COLUMN  FAD_CONCEVAL.FEC_HASTA IS 'Fecha termino de Vigencia'
/
COMMENT ON COLUMN  FAD_CONCEVAL.IND_OBLIGA IS 'Indica que concepto debe estar obligatoriamente facturado 1:Obligatorio 0:No obligatorio'
/
COMMENT ON COLUMN  FAD_CONCEVAL.MTO_MINFACT IS 'Monto minimo facturado por este concepto, para aplicar descuento'
/
COMMENT ON COLUMN  FAD_CONCEVAL.FEC_ULTMOD IS 'Fecha ultima actualizacion'
/
COMMENT ON COLUMN  FAD_CONCEVAL.NOM_USUARIO IS 'Nombre usuario responsable'
/
