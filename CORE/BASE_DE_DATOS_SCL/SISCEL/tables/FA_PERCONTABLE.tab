CREATE TABLE FA_PERCONTABLE(
    COD_PERCONTAB VARCHAR2(6) NOT NULL 
 ,  COD_ESTADO VARCHAR2(2) NOT NULL 
 ,  FEC_INIPER DATE NOT NULL 
 ,  FEC_TERPER DATE NOT NULL 
 ,  FEC_CIERREPAR DATE NULL 
 ,  FEC_CIERRETOT DATE NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ,  FEC_INGRESO DATE NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_PERCONTABLE IS 'Parametrizacion estructura de mensajes.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.COD_PERCONTAB IS 'Codigo de periodo contable (AAAAMM). [PK 1/1]'
/
COMMENT ON COLUMN  FA_PERCONTABLE.COD_ESTADO IS 'Estado del periodo Contable: NA=No Abierto | AB=Abierto | CP=Cerrado Parcial | CT=Cerrado Total'
/
COMMENT ON COLUMN  FA_PERCONTABLE.FEC_INIPER IS 'Fecha inicio periodo contable.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.FEC_TERPER IS 'Fecha termino periodo contable.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.FEC_CIERREPAR IS 'Fecha de cierre parcial de periodo contable.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.FEC_CIERRETOT IS 'Fecha de cierre total de periodo contable.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.NOM_USUARIO IS 'Nombre usuario responsable modificacion.'
/
COMMENT ON COLUMN  FA_PERCONTABLE.FEC_INGRESO IS 'Fecha ingreso periodo.'
/
