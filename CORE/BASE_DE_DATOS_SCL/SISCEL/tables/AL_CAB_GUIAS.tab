CREATE TABLE SISCEL.AL_CAB_GUIAS
(
  NUM_GUIA          NUMBER(9)                   NOT NULL,
  NUM_PETICION      NUMBER(9)                   NOT NULL,
  FEC_GUIA          DATE                        NOT NULL,
  DES_BODEGA_ORI    VARCHAR2(30 BYTE)           NOT NULL,
  NOM_DESTINATARIO  VARCHAR2(40 BYTE)           NOT NULL,
  COD_ESTADO        VARCHAR2(2 BYTE)            NOT NULL,
  IND_DETALLE       NUMBER(1)                   NOT NULL,
  DES_DIRECCION     VARCHAR2(60 BYTE),
  DES_CIUDAD        VARCHAR2(40 BYTE),
  NUM_TELEFONO      VARCHAR2(15 BYTE),
  NUM_FAX           VARCHAR2(15 BYTE),
  DES_ACTIVIDAD     VARCHAR2(40 BYTE),
  DES_BODEGA_DES    VARCHAR2(30 BYTE),
  COD_CLIENTE       NUMBER(8),
  NUM_FOLIO         NUMBER(9),
  USU_FOLIO         VARCHAR2(30 BYTE),
  DES_LITERAL       VARCHAR2(40 BYTE),
  NUM_VENTA         NUMBER(8),
  NUM_TRASPASO      NUMBER(9),
  NUM_DEVOLUCION    NUMBER(9),
  NUM_FACTURA       NUMBER(9),
  NUM_IDENT         VARCHAR2(20 BYTE),
  PREF_PLAZA        VARCHAR2(25 BYTE),
  COD_OPERADORA     VARCHAR2(5 BYTE)
)   TABLESPACE TS_LOGISTICA_SDAT
/

COMMENT ON TABLE SISCEL.AL_CAB_GUIAS IS 'Cabecera de Guias de Despacho';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_GUIA IS 'Numero de guia SISCEL';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_PETICION IS 'Numero de peticion';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.FEC_GUIA IS 'Fecha Emisisn de la Guma';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_BODEGA_ORI IS 'Descripcion de Bodega Origen';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NOM_DESTINATARIO IS 'Nombre del destinatario';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.COD_ESTADO IS 'Estado de la guia de despacho';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.IND_DETALLE IS 'Indicativo de detalle anexo';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_DIRECCION IS 'Direccisn';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_CIUDAD IS 'Ciudad';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_TELEFONO IS 'Numero de telefono';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_FAX IS 'Numero de Fax';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_ACTIVIDAD IS 'Actividad o giro del receptor de la mercancia reflejada en la guia.';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_BODEGA_DES IS 'Descripcion de Bodega Destino';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.COD_CLIENTE IS 'Nzmero de Abonado';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_FOLIO IS 'Nzmero de Folio';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.USU_FOLIO IS 'Usuario que asigna el folio';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.DES_LITERAL IS 'Literal a imprimir';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_VENTA IS 'Numero de venta asociado';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_TRASPASO IS 'Numero de traspaso asociado';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_DEVOLUCION IS 'Numero de devolucion asociada';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.NUM_FACTURA IS 'Numero Factura';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.PREF_PLAZA IS 'Prefijo de folio de la plaza';

COMMENT ON COLUMN SISCEL.AL_CAB_GUIAS.COD_OPERADORA IS 'Codigo de Operadora';

