CREATE TABLE GA_LNCLI_TO (  
   COD_TIPO                      NUMBER(1)                 NULL
 , CLIE_TELEFONICA               VARCHAR2(1)           NOT NULL
 , COD_CLIENTE                   NUMBER(8)                 NULL
 , NUM_TELEFONO                  NUMBER(15)                NULL
 , NOM_CLIENTE                   VARCHAR2(50)          NOT NULL
 , NOM_APECLIEN1                 VARCHAR2(20)              NULL
 , NOM_APECLIEN2                 VARCHAR2(20)              NULL
 , NOM_CONYUGE                   VARCHAR2(50)              NULL
 , COD_TIPIDENT1                 VARCHAR2(2)           NOT NULL
 , NUM_IDENT1                    VARCHAR2(20)          NOT NULL
 , NOM_EMPRESA                   VARCHAR2(50)              NULL
 , RZN_SOCIAL                    VARCHAR2(50)              NULL
 , COD_TIPIDENT2                 VARCHAR2(2)               NULL
 , NUM_IDENT2                    VARCHAR2(20)              NULL
 , COD_ESTADO                    NUMBER(2)             NOT NULL
 , COD_CAUSA                     NUMBER(2)             NOT NULL
 , OBSERVACION                   VARCHAR2(255)             NULL
 , FEC_INGRESO                   DATE                  NOT NULL
 , FEC_MODIFIC                   DATE                  NOT NULL
 , NOM_USUARIO                   VARCHAR2(30)          NOT NULL
 ) TABLESPACE     INSTALL_DATA
/
COMMENT ON TABLE  GA_LNCLI_TO                      IS '[ GA_LNCLI ] Listas Negras Clientes'
/

COMMENT ON COLUMN GA_LNCLI_TO.COD_TIPO                       IS 'Tipo de Cliente, ged_codigos'
/
COMMENT ON COLUMN GA_LNCLI_TO.CLIE_TELEFONICA                IS 'indicador si es cliente de SCL'
/
COMMENT ON COLUMN GA_LNCLI_TO.COD_CLIENTE                    IS 'cod_cliente SCL'
/
COMMENT ON COLUMN GA_LNCLI_TO.NUM_TELEFONO                   IS 'telefono de contacto'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_CLIENTE                    IS 'Nombre'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_APECLIEN1                  IS 'primer apellido'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_APECLIEN2                  IS 'Segundo apellido'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_CONYUGE                    IS 'nombre conyuge'
/
COMMENT ON COLUMN GA_LNCLI_TO.COD_TIPIDENT1                  IS 'tipo de identificación'
/
COMMENT ON COLUMN GA_LNCLI_TO.NUM_IDENT1                     IS 'numero de identificación'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_EMPRESA                    IS 'nombre empresa'
/
COMMENT ON COLUMN GA_LNCLI_TO.RZN_SOCIAL                     IS 'razón social empresa'
/
COMMENT ON COLUMN GA_LNCLI_TO.COD_TIPIDENT2                  IS 'tipo de Identificador opcional'
/
COMMENT ON COLUMN GA_LNCLI_TO.NUM_IDENT2                     IS 'número de identificación opcional'
/
COMMENT ON COLUMN GA_LNCLI_TO.COD_ESTADO                     IS 'vigente 1:si, 0:No'
/
COMMENT ON COLUMN GA_LNCLI_TO.COD_CAUSA                      IS 'causa  ingreso a listas negras'
/
COMMENT ON COLUMN GA_LNCLI_TO.OBSERVACION                    IS 'observación'
/
COMMENT ON COLUMN GA_LNCLI_TO.FEC_INGRESO                    IS 'fecha ingreso a listas negras'
/
COMMENT ON COLUMN GA_LNCLI_TO.FEC_MODIFIC                    IS 'Fecha modificación'
/
COMMENT ON COLUMN GA_LNCLI_TO.NOM_USUARIO                    IS 'usuario modificación'
/

