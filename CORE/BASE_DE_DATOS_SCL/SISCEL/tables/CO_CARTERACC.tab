 ,  COLUMNA NUMBER(4,0) DEFAULT 1 NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  IMPORTE_DEBE NUMBER(14,4) NOT NULL 
 ,  IMPORTE_HABER NUMBER(14,4) NOT NULL 
 ,  IND_CONTADO NUMBER(1,0) NOT NULL 
