 ,  NUM_CUOTA NUMBER(8,0) NULL 
 ,  SEC_CUOTA NUMBER(3,0) NULL 
 ,  NUM_TRANSACCION NUMBER(9,0) NULL 
 ,  NUM_VENTA NUMBER(8,0) NULL 
 ,  NUM_FOLIOCTC VARCHAR2(11) DEFAULT '0' NULL 
