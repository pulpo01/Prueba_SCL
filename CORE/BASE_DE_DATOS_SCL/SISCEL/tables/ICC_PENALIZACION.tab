CREATE TABLE ICC_PENALIZACION(
    NUM_ABONADO NUMBER(8,0) NOT NULL 
 ,  COD_MODULO VARCHAR2(2) NOT NULL 
 ,  COD_SUSPREHA VARCHAR2(3) NOT NULL 
 ,  FEC_INGRESO DATE DEFAULT SYSDATE NOT NULL 
 ,  COD_SERVICIO NUMBER(2,0) NOT NULL 
 ,  TIP_SUSPENSION VARCHAR2(2) NOT NULL 
 ,  COD_NIVEL NUMBER(4,0) NOT NULL 
 ,  COD_NIVEL_REA NUMBER(4,0) NOT NULL 
 ) TABLESPACE    TS_PROVISIONING_MDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  ICC_PENALIZACION IS 'Penalizaciones del abonado celular y control'
/
COMMENT ON COLUMN  ICC_PENALIZACION.COD_MODULO IS 'Codigo de Modulo'
/
COMMENT ON COLUMN  ICC_PENALIZACION.COD_SUSPREHA IS 'Codigo de suspension/rehabilitacion'
/
COMMENT ON COLUMN  ICC_PENALIZACION.FEC_INGRESO IS 'Fecha de Ingreso de la suspension'
/
COMMENT ON COLUMN  ICC_PENALIZACION.COD_SERVICIO IS 'Codigo de Sevicio suspendido'
/
COMMENT ON COLUMN  ICC_PENALIZACION.TIP_SUSPENSION IS 'tipo de suspension (multiservicio o de servicio individual)'
/
COMMENT ON COLUMN  ICC_PENALIZACION.COD_NIVEL IS 'Codigo de Nivel al que ha sido suspendido el servicio'
/
COMMENT ON COLUMN  ICC_PENALIZACION.COD_NIVEL_REA IS 'Nivel al que se rehabilitara el servicio'
/
COMMENT ON COLUMN  ICC_PENALIZACION.NUM_ABONADO IS 'Numero de Abonado'
/
