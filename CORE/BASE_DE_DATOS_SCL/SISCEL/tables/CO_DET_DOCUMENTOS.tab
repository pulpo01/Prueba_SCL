CREATE TABLE CO_DET_DOCUMENTOS
(
  NUM_SECUENCI        NUMBER(8)                 NOT NULL,
  NUM_DOCUMENTO       NUMBER(9)                 NOT NULL,
  NUM_SECUENCI_DOC    NUMBER(8)                 NOT NULL,
  COD_CLIENTE         NUMBER(9)                 NOT NULL,
  NUM_SECUENCI_PAGO   NUMBER(8)                 NOT NULL,
  NUM_SECUENCI_CA     NUMBER(10)                NOT NULL,
  COD_TIPDOCUM_CA     NUMBER(2)                 NOT NULL,
  COD_VEND_AGENTE_CA  NUMBER(6),
  LETRA_CA            VARCHAR2(1 BYTE),
  NUM_FOLIO_CA        NUMBER(9)                 NOT NULL,
  NUM_CUOTA_CA        NUMBER(8),
  SEC_CUOTA_CA        NUMBER(3),
  IMPORTE_CA          NUMBER(14,4)              NOT NULL,
  PREF_PLAZA          VARCHAR2(25 BYTE)
)
TABLESPACE TS_RECYCOB_SDAT
PCTUSED    0
PCTFREE    10
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          80K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CO_DET_DOCUMENTOS IS 'Detalle De Pago Del Documento.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_SECUENCI IS 'Numero de secuencia Interna de la tabla.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_DOCUMENTO IS 'Numero del Documento.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_SECUENCI_DOC IS 'Numero de Secuencia de la CO_DOCUMENTOS.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.COD_CLIENTE IS 'Codigo de Cliente.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_SECUENCI_PAGO IS 'Numero de Secuencia de la CO_PAGOS.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_SECUENCI_CA IS 'Numero de Secuencia de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.COD_TIPDOCUM_CA IS 'Tipo de Docuemento dela CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.COD_VEND_AGENTE_CA IS 'Codigo Vendedor Agente de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.LETRA_CA IS 'Letra de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_FOLIO_CA IS 'Numero de Folio de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.NUM_CUOTA_CA IS 'Numero de Cuotas de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.SEC_CUOTA_CA IS 'Secunecia de Cuota de la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.IMPORTE_CA IS 'Importe del Documento en la CO_CARTERA.';

COMMENT ON COLUMN CO_DET_DOCUMENTOS.PREF_PLAZA IS 'Prefijo Plaza.';
