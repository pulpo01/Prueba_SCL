CREATE TABLE GA_PETSR(
    NUM_PETICION NUMBER(9,0) NOT NULL 
 ,  NUM_ABONADO NUMBER(8,0) NOT NULL 
 ,  FEC_ALTA DATE NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  TIP_SUSP VARCHAR2(1) NOT NULL 
 ,  COD_CAUSASUSP VARCHAR2(2) NOT NULL 
 ,  NOM_USUARORA VARCHAR2(30) NOT NULL 
 ,  FEC_SUSPENSION DATE NOT NULL 
 ,  FEC_REHABILITA DATE NULL 
 ,  COD_SUSPENSION VARCHAR2(3) NOT NULL 
 ,  COD_SERVSUPL NUMBER(2,0) NULL 
 ,  COD_NIVEL NUMBER(4,0) NULL 
 ,  IND_ESTADOSUSP NUMBER(3,0) DEFAULT 0 NOT NULL 
 ,  IND_ESTADOREHA NUMBER(3,0) DEFAULT 0 NOT NULL 
 ,  COD_CARGOSUSP VARCHAR2(3) NULL 
 ,  COD_CARGOREHA VARCHAR2(3) NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
