CREATE TABLE RET_CAMPOS_TRAD(
    COD_CAMPO NUMBER(3,0) NOT NULL 
 ,  GLS_CAMPO VARCHAR2(30) NOT NULL 
 ,  IND_SIGNIFICATIVO NUMBER(1,0) DEFAULT 0 NULL 
 ,  IND_TIPO VARCHAR2(1) DEFAULT '0' NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  RET_CAMPOS_TRAD IS 'Contiene Los Campos Que Pueden Tener Los Archivos Del Traductor.'
/
COMMENT ON COLUMN  RET_CAMPOS_TRAD.COD_CAMPO IS 'Codigo del campo.'
/
COMMENT ON COLUMN  RET_CAMPOS_TRAD.GLS_CAMPO IS 'Descripcion del campo.'
/
COMMENT ON COLUMN  RET_CAMPOS_TRAD.IND_SIGNIFICATIVO IS 'indica si el campo del archivo es importante (0) o no (1).'
/
COMMENT ON COLUMN  RET_CAMPOS_TRAD.IND_TIPO IS 'Indica el tipo del campo (Entero, caracter, real, etc.).'
/
