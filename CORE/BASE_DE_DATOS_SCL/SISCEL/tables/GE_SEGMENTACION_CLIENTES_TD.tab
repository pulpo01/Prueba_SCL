CREATE TABLE SISCEL.GE_SEGMENTACION_CLIENTES_TD
(
  COD_TIPO      NUMBER(5)                       NOT NULL,
  COD_SEGMENTO  NUMBER(5)                       NOT NULL,
  DES_SEGMENTO  VARCHAR2(100 BYTE)              NOT NULL,
  NOM_USUARORA  VARCHAR2(30 BYTE)               NOT NULL,
  FEC_CREACION  DATE                            DEFAULT SYSDATE               NOT NULL
)
TABLESPACE INSTALL_DATA
/

COMMENT ON TABLE SISCEL.GE_SEGMENTACION_CLIENTES_TD IS '[ GE_SEGM ] Relacion  clasificación segmento por tipo de cliente'
/

COMMENT ON COLUMN SISCEL.GE_SEGMENTACION_CLIENTES_TD.COD_TIPO IS 'tipo de cliente, ged_codigos'
/

COMMENT ON COLUMN SISCEL.GE_SEGMENTACION_CLIENTES_TD.COD_SEGMENTO IS 'codigo segmento'
/

COMMENT ON COLUMN SISCEL.GE_SEGMENTACION_CLIENTES_TD.DES_SEGMENTO IS 'descripcion de segmento'
/

COMMENT ON COLUMN SISCEL.GE_SEGMENTACION_CLIENTES_TD.NOM_USUARORA IS 'usuario que modifica'
/

COMMENT ON COLUMN SISCEL.GE_SEGMENTACION_CLIENTES_TD.FEC_CREACION IS 'Fecha que se modifica el registro'
/

