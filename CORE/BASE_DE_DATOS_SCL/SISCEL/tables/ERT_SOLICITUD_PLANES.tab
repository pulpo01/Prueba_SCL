CREATE TABLE ERT_SOLICITUD_PLANES(
    NUM_SOLICITUD NUMBER(10,0) NOT NULL 
 ,  COD_PLANTARIF VARCHAR2(3) NOT NULL 
 ,  VAL_CANT_TERMINALES NUMBER(4,0) NULL 
 ,  VAL_CANT_VENDIDOS NUMBER(4,0) NULL 
 ,  IND_VENTA NUMBER(2,0) NULL 
 ) TABLESPACE    TS_CRM_GENERAL_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  ERT_SOLICITUD_PLANES IS 'Planes Seleccionados Asociados A Una Solicitud. Ver Tabla Ert_Solicitud.'
/
COMMENT ON COLUMN  ERT_SOLICITUD_PLANES.NUM_SOLICITUD IS 'Identificador unico de la solicitud. Ver tabla ERT_SOLICITUD.'
/
COMMENT ON COLUMN  ERT_SOLICITUD_PLANES.COD_PLANTARIF IS 'Codigo del plan tarifario seleccionado. Ver tabla TA_PLANTARIF.'
/
COMMENT ON COLUMN  ERT_SOLICITUD_PLANES.VAL_CANT_TERMINALES IS 'Valor de la cantidad de terminales por plan tarifario seleccionado.'
/
COMMENT ON COLUMN  ERT_SOLICITUD_PLANES.VAL_CANT_VENDIDOS IS 'Cantidad de Terminales que se han asignado a ventas (debe ser menor a val_cant_terminales).'
/
COMMENT ON COLUMN  ERT_SOLICITUD_PLANES.IND_VENTA IS 'Indicador de situacion, indica si el plan correspondiente se asigno a una venta (0=no, 1=si).'
/
