CREATE TABLE CO_CARTERA
(
  COD_CLIENTE          NUMBER(8)                NOT NULL,
  NUM_SECUENCI         NUMBER(8)                NOT NULL,
  COD_TIPDOCUM         NUMBER(2)                NOT NULL,
  COD_VENDEDOR_AGENTE  NUMBER(6)                NOT NULL,
  LETRA                VARCHAR2(1 BYTE)         NOT NULL,
  COD_CENTREMI         NUMBER(4)                NOT NULL,
  COD_CONCEPTO         NUMBER(4)                NOT NULL,
  COLUMNA              NUMBER(4)                DEFAULT 1                     NOT NULL,
  COD_PRODUCTO         NUMBER(1)                NOT NULL,
  IMPORTE_DEBE         NUMBER(16,4)             NOT NULL,
  IMPORTE_HABER        NUMBER(16,4)             NOT NULL,
  IND_CONTADO          NUMBER(1)                NOT NULL,
  IND_FACTURADO        NUMBER(1)                NOT NULL,
  FEC_EFECTIVIDAD      DATE                     NOT NULL,
  FEC_VENCIMIE         DATE                     NOT NULL,
  FEC_CADUCIDA         DATE                     NOT NULL,
  FEC_ANTIGUEDAD       DATE                     NOT NULL,
  NUM_ABONADO          NUMBER(8)                NOT NULL,
  NUM_FOLIO            NUMBER(9)                NOT NULL,
  FEC_PAGO             DATE,
  NUM_CUOTA            NUMBER(8)                DEFAULT 0,
  SEC_CUOTA            NUMBER(3)                DEFAULT 0,
  NUM_TRANSACCION      NUMBER(9),
  NUM_VENTA            NUMBER(8),
  NUM_FOLIOCTC         VARCHAR2(11 BYTE)        DEFAULT '0',
  COD_OPERADORA_SCL    VARCHAR2(5 BYTE),
  COD_PLAZA            VARCHAR2(5 BYTE),
  PREF_PLAZA           VARCHAR2(25 BYTE)
)
TABLESPACE TS_RECYCOB_LDAT
PCTUSED    0
PCTFREE    5
INITRANS   4
MAXTRANS   255
STORAGE    (
            INITIAL          128M
            NEXT             128M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOLOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CO_CARTERA IS 'Cartera de Cobros';

COMMENT ON COLUMN CO_CARTERA.COD_CLIENTE IS 'Codigo de Cliente';

COMMENT ON COLUMN CO_CARTERA.NUM_SECUENCI IS 'Numero de secuencia del siguiente docume';

COMMENT ON COLUMN CO_CARTERA.COD_TIPDOCUM IS 'CODIGO DE TIPO DE DOCUMENTO';

COMMENT ON COLUMN CO_CARTERA.COD_VENDEDOR_AGENTE IS 'Codigo de Agente';

COMMENT ON COLUMN CO_CARTERA.LETRA IS 'Letra de un documento';

COMMENT ON COLUMN CO_CARTERA.COD_CENTREMI IS 'CODIGO DEL CENTRO EMISOR';

COMMENT ON COLUMN CO_CARTERA.COD_CONCEPTO IS 'Codigo de Concepto';

COMMENT ON COLUMN CO_CARTERA.COLUMNA IS 'Secuencia';

COMMENT ON COLUMN CO_CARTERA.COD_PRODUCTO IS 'Codigo de producto';

COMMENT ON COLUMN CO_CARTERA.IMPORTE_DEBE IS 'Importe debe';

COMMENT ON COLUMN CO_CARTERA.IMPORTE_HABER IS 'Importe haber';

COMMENT ON COLUMN CO_CARTERA.IND_CONTADO IS '0 - Recurrente 1 - Contado';

COMMENT ON COLUMN CO_CARTERA.IND_FACTURADO IS 'Indicador de Facturado';

COMMENT ON COLUMN CO_CARTERA.FEC_EFECTIVIDAD IS 'Fecha de Efectividad';

COMMENT ON COLUMN CO_CARTERA.FEC_VENCIMIE IS 'Fecha de vencimiento';

COMMENT ON COLUMN CO_CARTERA.FEC_CADUCIDA IS 'Fecha de caducidad';

COMMENT ON COLUMN CO_CARTERA.FEC_ANTIGUEDAD IS 'Fecha de Antiguedad';

COMMENT ON COLUMN CO_CARTERA.NUM_ABONADO IS 'Numero de abonado';

COMMENT ON COLUMN CO_CARTERA.NUM_FOLIO IS 'NUMERO DE FOLIO';

COMMENT ON COLUMN CO_CARTERA.FEC_PAGO IS 'Fecha del Pago';

COMMENT ON COLUMN CO_CARTERA.NUM_CUOTA IS 'Numero de cuota';

COMMENT ON COLUMN CO_CARTERA.SEC_CUOTA IS 'Secuencia de cuota';

COMMENT ON COLUMN CO_CARTERA.NUM_TRANSACCION IS 'Numero de transaccion';

COMMENT ON COLUMN CO_CARTERA.NUM_VENTA IS 'Numero de Venta';

COMMENT ON COLUMN CO_CARTERA.COD_OPERADORA_SCL IS 'Codigo de operadora';

COMMENT ON COLUMN CO_CARTERA.COD_PLAZA IS 'Codigo de plaza';

COMMENT ON COLUMN CO_CARTERA.PREF_PLAZA IS 'Prefijo Plaza.';
