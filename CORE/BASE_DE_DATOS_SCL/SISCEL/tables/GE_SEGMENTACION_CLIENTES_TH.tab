CREATE TABLE GE_SEGMENTACION_CLIENTES_TH (  
   COD_TIPO                      VARCHAR2(5)                                     NOT NULL  
 , COD_SEGMENTO                  VARCHAR2(5)                                     NOT NULL  
 , DES_SEGMENTO                  VARCHAR2(100)                                     NOT NULL  
 , FEC_CREACION                  DATE                                          DEFAULT  SYSDATE NOT NULL  
 , NOM_USUARORA                  VARCHAR2(30)                                     NOT NULL
 ) TABLESPACE   INSTALL_DATA  
/


