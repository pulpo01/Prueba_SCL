CREATE TABLE CO_ABONADOEVENTO(
    COD_EVENTO NUMBER(8,0) NOT NULL 
 ,  NUM_ABONADO NUMBER(8,0) NOT NULL 
 ,  COD_CLIENTE NUMBER(8,0) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  FECHA_ALTA DATE NOT NULL 
 ,  NOM_USUALTA VARCHAR2(30) NOT NULL 
 ,  IMP_DEUDA NUMBER(14,4) NOT NULL 
 ,  COD_ESTADO VARCHAR2(2) NOT NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_ABONADOEVENTO IS 'Tabla donde vamos a tener la relacion de los abonados asociados a un evento y el estado en el que estan'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.COD_EVENTO IS 'Csdigo de evento'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.NUM_ABONADO IS 'Nzmero de abonado'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.COD_CLIENTE IS 'Codigo de cliente'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.COD_PRODUCTO IS 'Producto'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.FECHA_ALTA IS 'Fecha de alta en la tabla'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.NOM_USUALTA IS 'Usuario que le ha dado de lata en la tabla'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.IMP_DEUDA IS 'Importe total que el cliente adeuda'
/
COMMENT ON COLUMN  CO_ABONADOEVENTO.COD_ESTADO IS 'Estado en el que se encuentra el cliente'
/
