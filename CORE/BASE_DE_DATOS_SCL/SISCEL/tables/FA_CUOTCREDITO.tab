CREATE TABLE FA_CUOTCREDITO
(
  IND_ORDENTOTAL       NUMBER(12)               NOT NULL,
  COD_CLIENTE          NUMBER(8)                NOT NULL,
  NUM_SECUENCI         NUMBER(8)                NOT NULL,
  COD_TIPDOCUM         NUMBER(2)                NOT NULL,
  COD_VENDEDOR_AGENTE  NUMBER(6)                NOT NULL,
  LETRA                VARCHAR2(1 BYTE)         NOT NULL,
  COD_CENTREMI         NUMBER(4)                NOT NULL,
  COD_CONCEPTO         NUMBER(4)                NOT NULL,
  COLUMNA              NUMBER(4)                NOT NULL,
  NUM_CUOTA            NUMBER(8)                NOT NULL,
  SEC_CUOTA            NUMBER(3)                NOT NULL,
  COD_CICLFACT         NUMBER(8)                NOT NULL,
  IND_FACTURADO        NUMBER(1)                NOT NULL,
  FEC_VENCIMIE         DATE                     NOT NULL,
  NUM_FOLIOCTC         VARCHAR2(11 BYTE)        NOT NULL,
  MTO_CUOTA            NUMBER(14,4)             NOT NULL,
  FEC_COMPRA           DATE                     NOT NULL,
  IND_IMPRESO          NUMBER(1)                NOT NULL,
  NUM_FOLIO            NUMBER(9),
  FEC_EFECTIVIDAD      DATE,
  PREF_PLAZA           VARCHAR2(25 BYTE)        DEFAULT 'TMG'                 NOT NULL,
  NUM_ABONADO          NUMBER(8)
)
TABLESPACE TS_FACTURACION_MDAT
PCTUSED    0
PCTFREE    5
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          40K
            NEXT             4M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE FA_CUOTCREDITO IS 'Cuotas en proceso.';

COMMENT ON COLUMN FA_CUOTCREDITO.IND_ORDENTOTAL IS 'Indicativo de orden total.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_CLIENTE IS 'Codigo de cliente.';

COMMENT ON COLUMN FA_CUOTCREDITO.NUM_SECUENCI IS 'Numero de secuencia del documento.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_TIPDOCUM IS 'Codigo de tipo de documento.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_VENDEDOR_AGENTE IS 'Codigo de agente comercial.';

COMMENT ON COLUMN FA_CUOTCREDITO.LETRA IS 'Letra de un documento.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_CENTREMI IS 'Codigo del centro emisor.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_CONCEPTO IS 'Codigo de concepto.';

COMMENT ON COLUMN FA_CUOTCREDITO.COLUMNA IS 'Columna.';

COMMENT ON COLUMN FA_CUOTCREDITO.NUM_CUOTA IS 'Numero total de cuotas.';

COMMENT ON COLUMN FA_CUOTCREDITO.SEC_CUOTA IS 'Secuencia de la cuota.';

COMMENT ON COLUMN FA_CUOTCREDITO.COD_CICLFACT IS 'Codigo de ciclo de facturacion.';

COMMENT ON COLUMN FA_CUOTCREDITO.IND_FACTURADO IS 'Indicador de facturado.';

COMMENT ON COLUMN FA_CUOTCREDITO.FEC_VENCIMIE IS 'Fecha de vencimiento.';

COMMENT ON COLUMN FA_CUOTCREDITO.NUM_FOLIOCTC IS 'Numero de folio CTC.';

COMMENT ON COLUMN FA_CUOTCREDITO.MTO_CUOTA IS 'Monto de la cuota.';

COMMENT ON COLUMN FA_CUOTCREDITO.FEC_COMPRA IS 'Fecha de compra.';

COMMENT ON COLUMN FA_CUOTCREDITO.IND_IMPRESO IS 'Indicador de impreso.';

COMMENT ON COLUMN FA_CUOTCREDITO.NUM_FOLIO IS 'Numero de Folio.';

COMMENT ON COLUMN FA_CUOTCREDITO.FEC_EFECTIVIDAD IS 'Fecha de Efectividad.';

COMMENT ON COLUMN FA_CUOTCREDITO.PREF_PLAZA IS 'PREFIJO DE LA PLAZA';

COMMENT ON COLUMN FA_CUOTCREDITO.NUM_ABONADO IS 'Numero de Abonado';
