CREATE TABLE FA_PARAMDIR_TO (  
   COD_PARAMDIR                  NUMBER(3)                    NOT NULL
 , DES_PARAMDIR                  VARCHAR2(50)                 NOT NULL
 , TIP_DAT                       VARCHAR2(3)                  NOT NULL
 , SEC_DAT                       NUMBER(2)                    NOT NULL
 , CAPTION                       VARCHAR2(50)                 NOT NULL
 , NOM_COLUMN                    VARCHAR2(30)    DEFAULT  ' ' NOT NULL
 , TIP_FORMAT                    NUMBER(3)       DEFAULT   0  NOT NULL
 , LARGO                         NUMBER(3)       DEFAULT   1  NOT NULL 
 ) TABLESPACE     INSTALL_DATA
/


COMMENT ON TABLE  FA_PARAMDIR_TO                      IS '[ FAPR ] Parámetros de DirecciónParámetros de Dirección'
/

COMMENT ON COLUMN FA_PARAMDIR_TO.COD_PARAMDIR                   IS 'Código del parámetro de Dirección'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.DES_PARAMDIR                   IS 'Descripción del parámetro de dirección'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.TIP_DAT                        IS 'Tipo de Dato Visual'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.SEC_DAT                        IS 'Secuencial dentro del arreglo'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.CAPTION                        IS 'Caption del parámetro de dirección'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.NOM_COLUMN                     IS 'Nombre de campo en Tabla direcciones'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.TIP_FORMAT                     IS 'Indica formato (1:Necesita comillas, 0:No necesita)'
/
COMMENT ON COLUMN FA_PARAMDIR_TO.LARGO                          IS 'Largo del parámetro'
/

