CREATE TABLE VE_VENDEALER
(
  COD_TIPCOMIS     VARCHAR2(2 BYTE)             NOT NULL,
  COD_VENDEDOR     NUMBER(6)                    NOT NULL,
  COD_VENDEALER    NUMBER(6)                    NOT NULL,
  COD_VENDE_RAIZ   NUMBER(6)                    NOT NULL,
  NOM_VENDEALER    VARCHAR2(40 BYTE)            NOT NULL,
  COD_TIPIDENT     VARCHAR2(2 BYTE)             NOT NULL,
  NUM_IDENT        VARCHAR2(20 BYTE)            NOT NULL,
  FEC_CONTRATO     DATE                         NOT NULL,
  COD_OFICINA      VARCHAR2(2 BYTE)             NOT NULL,
  NUM_PIN          VARCHAR2(10 BYTE),
  FEC_FINCONTRATO  DATE,
  COD_MOTIVO       NUMBER(2),
  NOM_USUARIO      VARCHAR2(30 BYTE),
  COD_ESTADO       NUMBER(1),
  NUM_MOVIL        NUMBER(10),
  PLAN_MOVIL       VARCHAR2(3 BYTE),
  COD_TIPVEN       NUMBER(6),
  E_MAIL           VARCHAR2(100 BYTE)
)
TABLESPACE TS_CRM_GESTION_SDAT
PCTUSED    0
PCTFREE    10
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          960K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE VE_VENDEALER IS 'Vendedores de los distribuidores';

COMMENT ON COLUMN VE_VENDEALER.E_MAIL IS 'Correo Electronico Vendedor Externo';

COMMENT ON COLUMN VE_VENDEALER.COD_TIPCOMIS IS 'Codigo del Tipo de Comisionista asociado al Vendedor superior (no raiz)';

COMMENT ON COLUMN VE_VENDEALER.COD_VENDEDOR IS 'Codigo del vendedor del que depende';

COMMENT ON COLUMN VE_VENDEALER.COD_VENDEALER IS 'Codigo del vendedor del distribuidor';

COMMENT ON COLUMN VE_VENDEALER.COD_VENDE_RAIZ IS 'Codigo de Comisionista de mayor nivel';

COMMENT ON COLUMN VE_VENDEALER.NOM_VENDEALER IS 'Nombre del vendedor';

COMMENT ON COLUMN VE_VENDEALER.COD_TIPIDENT IS 'Codigo de Tipo de Identificacion';

COMMENT ON COLUMN VE_VENDEALER.NUM_IDENT IS 'Numero de Identificacion';

COMMENT ON COLUMN VE_VENDEALER.FEC_CONTRATO IS 'Fecha de contratacion';

COMMENT ON COLUMN VE_VENDEALER.COD_OFICINA IS 'Oficina a la que se encuentra asociado el Vendedor (por COD_VENDEDOR)';

COMMENT ON COLUMN VE_VENDEALER.NUM_PIN IS 'PIN';

COMMENT ON COLUMN VE_VENDEALER.FEC_FINCONTRATO IS 'Fecha de expiracion de contrato';

COMMENT ON COLUMN VE_VENDEALER.NUM_MOVIL IS 'Numero Móvil del Vendedor';

COMMENT ON COLUMN VE_VENDEALER.PLAN_MOVIL IS 'Plan del Móvil del Vendedor';

COMMENT ON COLUMN VE_VENDEALER.COD_TIPVEN IS 'Codigo del Tipo de Vendedor';

