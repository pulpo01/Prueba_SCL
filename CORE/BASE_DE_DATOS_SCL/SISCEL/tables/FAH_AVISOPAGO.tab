CREATE TABLE FAH_AVISOPAGO
(
  NUM_SECUENCI         NUMBER(8)                NOT NULL,
  COD_TIPDOCUM         NUMBER(2)                NOT NULL,
  COD_VENDEDOR_AGENTE  NUMBER(6)                NOT NULL,
  LETRA                CHAR(1 BYTE)             NOT NULL,
  COD_CENTREMI         NUMBER(4)                NOT NULL,
  TOT_PAGAR            NUMBER(14,4)             NOT NULL,
  TOT_CARGOSME         NUMBER(14,4)             NOT NULL,
  COD_CLIENTE          NUMBER(8)                NOT NULL,
  FEC_EMISION          DATE                     NOT NULL,
  ACUM_NETOGRAV        NUMBER(14,4)             NOT NULL,
  ACUM_NETONOGRAV      NUMBER(14,4)             NOT NULL,
  IND_ORDENTOTAL       NUMBER(12)               NOT NULL,
  ACUM_IVA             NUMBER(14,4)             NOT NULL,
  NUM_PROCESO          NUMBER(8)                NOT NULL,
  NUM_FOLIO            NUMBER(9)                DEFAULT 0                     NOT NULL,
  FEC_VENCIMIE         DATE,
  COD_CICLFACT         NUMBER(8),
  IMP_SALDOANT         NUMBER(14,4),
  NUM_CTC              VARCHAR2(12 BYTE)        DEFAULT '0',
  TOT_FACTURA          NUMBER(14,4)             DEFAULT 0                     NOT NULL,
  TOT_CUOTAS           NUMBER(14,4)             DEFAULT 0                     NOT NULL,
  TOT_DESCUENTO        NUMBER(14,4)             DEFAULT 0                     NOT NULL,
  COD_DESPACHO         VARCHAR2(5 BYTE),
  COD_BARRAS           VARCHAR2(20 BYTE),
  PREF_PLAZA           VARCHAR2(25 BYTE)        DEFAULT 'TMG'                 NOT NULL
)
TABLESPACE TS_FACTURACION_SDAT
PCTUSED    0
PCTFREE    5
INITRANS   64
MAXTRANS   255
STORAGE    (
            INITIAL          50M
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE FAH_AVISOPAGO IS 'Historica De Avisos De Pago.';

COMMENT ON COLUMN FAH_AVISOPAGO.NUM_SECUENCI IS 'Numero de secuencia del documento.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_TIPDOCUM IS 'Codigo de Tipo de Documento.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_VENDEDOR_AGENTE IS 'Codigo de Agente Comercial.';

COMMENT ON COLUMN FAH_AVISOPAGO.LETRA IS 'Letra de un documento.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_CENTREMI IS 'Codigo de Centro Emisor.';

COMMENT ON COLUMN FAH_AVISOPAGO.TOT_PAGAR IS 'Total a pagar en pesos.';

COMMENT ON COLUMN FAH_AVISOPAGO.TOT_CARGOSME IS 'Total del documento sin deuda.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_CLIENTE IS 'Codigo de Cliente.';

COMMENT ON COLUMN FAH_AVISOPAGO.FEC_EMISION IS 'Fecha de emision.';

COMMENT ON COLUMN FAH_AVISOPAGO.ACUM_NETOGRAV IS 'Acumulado del Neto Gravado.';

COMMENT ON COLUMN FAH_AVISOPAGO.ACUM_NETONOGRAV IS 'Acumulado del Neto No Gravado.';

COMMENT ON COLUMN FAH_AVISOPAGO.IND_ORDENTOTAL IS 'Indice que relaciona toda la informacion de una Factura.';

COMMENT ON COLUMN FAH_AVISOPAGO.ACUM_IVA IS 'Acumulado de Iva.';

COMMENT ON COLUMN FAH_AVISOPAGO.NUM_PROCESO IS 'Numero de Proceso de Facturacion.';

COMMENT ON COLUMN FAH_AVISOPAGO.NUM_FOLIO IS 'Numero de Folio.';

COMMENT ON COLUMN FAH_AVISOPAGO.FEC_VENCIMIE IS 'Fecha de vencimiento.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_CICLFACT IS 'Codigo de ciclo de facturacion.';

COMMENT ON COLUMN FAH_AVISOPAGO.IMP_SALDOANT IS 'Importe del Saldo Anterior.';

COMMENT ON COLUMN FAH_AVISOPAGO.NUM_CTC IS 'Numero CTC.';

COMMENT ON COLUMN FAH_AVISOPAGO.TOT_FACTURA IS 'Total Factura.';

COMMENT ON COLUMN FAH_AVISOPAGO.TOT_CUOTAS IS 'Total Cuotas.';

COMMENT ON COLUMN FAH_AVISOPAGO.TOT_DESCUENTO IS 'Total Descuento.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_DESPACHO IS 'Codigo de Despacho.';

COMMENT ON COLUMN FAH_AVISOPAGO.COD_BARRAS IS 'Codigo de Barras';

COMMENT ON COLUMN FAH_AVISOPAGO.PREF_PLAZA IS 'PREFIJO DE LA PLAZA';
