CREATE TABLE CO_REPOPUNTUAL(
    COD_CLIENTE NUMBER(8,0) NOT NULL 
 ,  NUM_SECUENCIA NUMBER(8,0) NOT NULL 
 ,  FEC_REPOSICION DATE NULL 
 ,  NOM_USUARIO VARCHAR2(30) NULL 
 ,  IND_CARGO CHAR(1) NULL 
 ,  COD_MOTIVO VARCHAR2(5) NULL 
 ,  IND_EXCLUSION CHAR(1) NULL 
 ) TABLESPACE    TS_RECYCOB_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  CO_REPOPUNTUAL IS 'Reposiciones Puntuales.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.COD_CLIENTE IS 'Codigo del Cliente.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.NUM_SECUENCIA IS 'Secuencia de la Accion.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.FEC_REPOSICION IS 'Fecha de la Reposicion.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.NOM_USUARIO IS 'Usuario que realizo la reposicion.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.IND_CARGO IS 'Indica si se le genero cargo.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.COD_MOTIVO IS 'Motivo por el cual NO se le genero cargo.'
/
COMMENT ON COLUMN  CO_REPOPUNTUAL.IND_EXCLUSION IS 'Indica si se excluyo el cliente por no tener deuda vencida.'
/
