CREATE TABLE PV_ACTUAC_RESTRICCION(
    COD_OPERADORA VARCHAR2(5) NOT NULL 
 ,  COD_MODULO VARCHAR2(2) NOT NULL 
 ,  COD_PRODUCTO NUMBER(1,0) NOT NULL 
 ,  COD_ACTUACION VARCHAR2(2) NOT NULL 
 ,  COD_EVENTO VARCHAR2(10) NOT NULL 
 ,  NUM_RESTRICCION NUMBER(5,0) NOT NULL 
 ,  FLG_ESTADO VARCHAR2(5) DEFAULT 'TRUE' NOT NULL 
 ,  FEC_ULTMOD DATE DEFAULT SYSDATE NOT NULL 
 ,  NOM_USUARIO VARCHAR2(30) NOT NULL 
 ,  IND_ORDEN NUMBER(2,0) NULL 
 ) TABLESPACE    TS_CRM_POSVENTA_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  PV_ACTUAC_RESTRICCION IS 'Tabla de relación entre eventos de una actuación y restricciones.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.COD_MODULO IS 'Código del módulo al que se le puede aplicar la restricción.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.COD_PRODUCTO IS 'Código del producto donde se puede aplicar restricción.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.COD_ACTUACION IS 'Código de actuación donde se puede aplicar restricción.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.COD_EVENTO IS 'Código del evento dentro de la actuacion donde se puede aplicar restricción.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.NUM_RESTRICCION IS 'Código restricción que se puede aplicar.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.FLG_ESTADO IS 'Estado de la restricción TRUE, FALSE. Este flag indica si se ejecuta o no.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.FEC_ULTMOD IS 'Fecha de modificación o inserción del registro.'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.NOM_USUARIO IS 'Identificador del usuario ("username" Oracle).'
/
COMMENT ON COLUMN  PV_ACTUAC_RESTRICCION.COD_OPERADORA IS 'Código de la operadora que puede tener la restriccion.'
/
