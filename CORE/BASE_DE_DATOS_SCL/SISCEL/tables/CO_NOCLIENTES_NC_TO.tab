CREATE TABLE CO_NOCLIENTES_NC_TO
(
  NUM_PROCESO     NUMBER(8)                     NOT NULL,
  COD_CLIENTE     NUMBER(8)                     NOT NULL,
  NUM_FOLIO       NUMBER(9)                     NOT NULL,
  COD_TIPDOCUM    NUMBER(2)                     NOT NULL,
  SEQ_PL          NUMBER(9)                     NOT NULL,
  MTO_FACTURA     NUMBER(14,4)                  DEFAULT 0                     NOT NULL,
  MTO_NC          NUMBER(14,4)                  DEFAULT 0                     NOT NULL,
  TIP_NC          CHAR(1 BYTE),
  COD_ERROR       VARCHAR2(5 BYTE)              NOT NULL,
  NUM_PROCFACT    NUMBER(8),
  NUM_NCPARCIAL   NUMBER(8),
  DES_ERRORPL     VARCHAR2(255 BYTE),
  NOM_USUARIO     VARCHAR2(30 BYTE)             NOT NULL,
  FEC_APLICACION  DATE                          NOT NULL,
  PREF_PLAZA      VARCHAR2(25 BYTE)
)
TABLESPACE TS_RECYCOB_SDAT
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          40K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON TABLE CO_NOCLIENTES_NC_TO IS 'NOTAS DE CREDITOS PARA NO CLIENTES';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.NUM_PROCESO IS 'NUMERO PROCESO - SECUENCIA CO_SEQ_COBEXTERNA';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.COD_CLIENTE IS 'CODIGO CLIENTE';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.NUM_FOLIO IS 'NUMERO DE FOLIO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.COD_TIPDOCUM IS 'TIPO DOCUMENTO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.SEQ_PL IS 'SECUENCIA PL GA_SEQ_TRANSACABO.';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.MTO_FACTURA IS 'TOTAL FACTURA';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.MTO_NC IS 'TOTAL NOTA CREDITO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.TIP_NC IS 'TIPO NOTA CREDITO (Total-Parcial)';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.COD_ERROR IS 'CODIGO DE ERROR';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.NUM_PROCFACT IS 'NUM.PROCESO FACTURACION - SECUENCIA FA_SEQ_NUMPRO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.NUM_NCPARCIAL IS 'SECUENCIA FA_SEQ_NCPARCIAL';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.DES_ERRORPL IS 'DESCRIPCION DE ERROR EN PL';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.NOM_USUARIO IS 'NOMBRE USUARIO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.FEC_APLICACION IS 'FECHA PROCESO';

COMMENT ON COLUMN CO_NOCLIENTES_NC_TO.PREF_PLAZA IS 'Prefijo Plaza';

