CREATE TABLE FA_MENSAJES(
    CORR_MENSAJE NUMBER(8,0) NOT NULL 
 ,  NUM_LINEA VARCHAR2(2) NOT NULL 
 ,  DESC_MENSAJE VARCHAR2(40) NOT NULL 
 ,  DESC_MENSLIN VARCHAR2(200) NOT NULL 
 ,  COD_IDIOMA VARCHAR2(5) DEFAULT NULL NOT NULL 
 ,  CANT_LINEASMEN NUMBER(2,0) DEFAULT 0 NOT NULL 
 ,  CANT_CARACTLIN NUMBER(4,0) DEFAULT 0 NOT NULL 
 ) TABLESPACE    TS_FACTURACION_SDAT
 LOGGING
 NOCACHE
 NOPARALLEL
/
COMMENT ON TABLE  FA_MENSAJES IS 'Parametrizacion de criterios de separacion archivos'
/
COMMENT ON COLUMN  FA_MENSAJES.CORR_MENSAJE IS 'Correlativo de mensaje.      [PK 1/2]'
/
COMMENT ON COLUMN  FA_MENSAJES.NUM_LINEA IS 'Numero de linea del mensaje. [PK 2/2]'
/
COMMENT ON COLUMN  FA_MENSAJES.DESC_MENSAJE IS 'Descripcion corta del mensaje'
/
COMMENT ON COLUMN  FA_MENSAJES.DESC_MENSLIN IS 'Linea de mensaje'
/
COMMENT ON COLUMN  FA_MENSAJES.COD_IDIOMA IS 'CODIGO DE IDIOMA DEL MENSAJE.'
/
COMMENT ON COLUMN  FA_MENSAJES.CANT_LINEASMEN IS 'CANTIDAD DE LINEAS DEL MENSAJE (MAX.).'
/
COMMENT ON COLUMN  FA_MENSAJES.CANT_CARACTLIN IS 'CANTIDAD DE CARACTERES POR LINEA DEL MENSAJE (MAX)..'
/
