CREATE TABLE NPT_PROM_ARTICULO_TH (  
   COD_PROMOCION                 NUMBER  (6)                                     NOT NULL  
 , COD_ARTICULO                  NUMBER  (6)                                     NOT NULL  
 , PRC_ARTICULO                  NUMBER  (16,4) NOT NULL  
 , FEC_CREACION                  DATE                                         NOT NULL  
 , USUA_CREACION                 VARCHAR2(30)                                     NOT NULL  
 , FEC_ACTUALIZA                 DATE                                           
 , USUA_ACTUALIZA                VARCHAR2(30)                                       
 , COD_ACCION                    VARCHAR2(1)                                     NOT NULL
 ) TABLESPACE  INSTALL_DATA
/


COMMENT ON TABLE  NPT_PROM_ARTICULO_TH                      IS '[ PRAH ] Historico  promociones por articulo'
/

COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.COD_PROMOCION                  IS 'Código de promoción                           '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.COD_ARTICULO                   IS 'Código de artículo                            '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.PRC_ARTICULO                   IS 'Precio del artículo en promoción              '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.FEC_CREACION                   IS 'Fecha de creación del registro                '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.USUA_CREACION                  IS 'Usuario que crea el registro                  '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.FEC_ACTUALIZA                  IS 'Fecha de actualización del registro           '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.USUA_ACTUALIZA                 IS 'Usuario que actualiza el registro             '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TH.COD_ACCION                     IS 'Código de accion sobre registro: I=Insert,D=Delete,U=Update'
/