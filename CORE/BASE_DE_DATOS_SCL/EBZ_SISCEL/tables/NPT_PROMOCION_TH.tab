CREATE TABLE NPT_PROMOCION_TH (  
   COD_PROMOCION                 NUMBER  (6)                                     NOT NULL  
 , DES_PROMOCION                 VARCHAR2(100)                                     NOT NULL  
 , FEC_INI_VIGENCIA              DATE                                         NOT NULL  
 , FEC_FIN_VIGENCIA              DATE                                         NOT NULL  
 , FEC_CREACION                  DATE                                         NOT NULL  
 , USUA_CREACION                 VARCHAR2(30)                                     NOT NULL  
 , FEC_ACTUALIZA                 DATE                                           
 , USUA_ACTUALIZA                VARCHAR2(30)                                       
 , COD_ACCION                    VARCHAR2(1)                                     NOT NULL
 ) TABLESPACE  INSTALL_DATA
/


COMMENT ON TABLE  NPT_PROMOCION_TH                      IS '[ PROH ] Historico de promociones'
/

COMMENT ON COLUMN NPT_PROMOCION_TH.COD_PROMOCION                  IS 'Código de promoción                '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.DES_PROMOCION                  IS 'Descripción de la promoción        '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.FEC_INI_VIGENCIA               IS 'Fecha de inicio de vigencia        '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.FEC_FIN_VIGENCIA               IS 'Fecha de fin de vigencia           '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.FEC_CREACION                   IS 'Fecha de creación del registro     '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.USUA_CREACION                  IS 'Usuario que crea el registro       '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.FEC_ACTUALIZA                  IS 'Fecha de actualización del registro'
/
COMMENT ON COLUMN NPT_PROMOCION_TH.USUA_ACTUALIZA                 IS 'Usuario que actualiza el registro  '
/
COMMENT ON COLUMN NPT_PROMOCION_TH.COD_ACCION                     IS 'Código de accion sobre registro: I=Insert,D=Delete,U=Update'
/