CREATE TABLE NPT_PROM_ARTICULO_TD (  
   COD_PROMOCION                 NUMBER  (6)                                     NOT NULL  
 , COD_ARTICULO                  NUMBER  (6)                                     NOT NULL  
 , PRC_ARTICULO                  NUMBER  (16,4) NOT NULL  
 , FEC_CREACION                  DATE                                         NOT NULL  
 , USUA_CREACION                 VARCHAR2(30)                                     NOT NULL  
 , FEC_ACTUALIZA                 DATE                                           
 , USUA_ACTUALIZA                VARCHAR2(30)                                       
 , IND_ACTUALIZA                 NUMBER                                       
 ) TABLESPACE   INSTALL_DATA  
/


COMMENT ON TABLE  NPT_PROM_ARTICULO_TD                      IS '[ PRAR ] Promociones por artículos'
/

COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.COD_PROMOCION                  IS 'Código de promoción                           '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.COD_ARTICULO                   IS 'Código de artículo                            '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.PRC_ARTICULO                   IS 'Precio del artículo en promoción              '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.FEC_CREACION                   IS 'Fecha de creación del registro                '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.USUA_CREACION                  IS 'Usuario que crea el registro                  '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.FEC_ACTUALIZA                  IS 'Fecha de actualización del registro           '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.USUA_ACTUALIZA                 IS 'Usuario que actualiza el registro             '
/
COMMENT ON COLUMN NPT_PROM_ARTICULO_TD.IND_ACTUALIZA                  IS 'Indicador de actualización: 1=antiguo,2=Nuevo.'
/