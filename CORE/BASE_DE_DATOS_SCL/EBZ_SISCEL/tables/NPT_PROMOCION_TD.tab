CREATE TABLE NPT_PROMOCION_TD (  
   COD_PROMOCION                 NUMBER  (6)                                     NOT NULL  
 , DES_PROMOCION                 VARCHAR2(100)                                     NOT NULL  
 , FEC_INI_VIGENCIA              DATE                                         NOT NULL  
 , FEC_FIN_VIGENCIA              DATE                                         NOT NULL  
 , FEC_CREACION                  DATE                                         NOT NULL  
 , USUA_CREACION                 VARCHAR2(30)                                     NOT NULL  
 , FEC_ACTUALIZA                 DATE                                           
 , USUA_ACTUALIZA                VARCHAR2(30)                                     
 ) TABLESPACE  INSTALL_DATA   
/


COMMENT ON TABLE  NPT_PROMOCION_TD                      IS '[ PROM ] Promociones'
/

COMMENT ON COLUMN NPT_PROMOCION_TD.COD_PROMOCION                  IS 'Código de promoción                '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.DES_PROMOCION                  IS 'Descripción de la promoción        '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.FEC_INI_VIGENCIA               IS 'Fecha de inicio de vigencia        '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.FEC_FIN_VIGENCIA               IS 'Fecha de fin de vigencia           '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.FEC_CREACION                   IS 'Fecha de creación del registro     '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.USUA_CREACION                  IS 'Usuario que crea el registro       '
/
COMMENT ON COLUMN NPT_PROMOCION_TD.FEC_ACTUALIZA                  IS 'Fecha de actualización del registro'
/
COMMENT ON COLUMN NPT_PROMOCION_TD.USUA_ACTUALIZA                 IS 'Usuario que actualiza el registro  '
/