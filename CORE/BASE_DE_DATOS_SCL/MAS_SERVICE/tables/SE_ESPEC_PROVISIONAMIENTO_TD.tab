CREATE TABLE MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD
(
  COD_ESPEC_PROV  NUMBER(38)                    NOT NULL,
  NOM_PROV        VARCHAR2(15 BYTE)             NOT NULL,
  DES_PROV        VARCHAR2(30 BYTE)             DEFAULT 'X'                   NOT NULL,
  FEC_INI_VIG     DATE                          DEFAULT SYSDATE               NOT NULL,
  FEC_TER_VIG     DATE                          DEFAULT to_date('31-12-3000','DD-MM-YYYY') NOT NULL,
  COD_ESTADO      VARCHAR2(10 BYTE),
  TIPO_ACCION     VARCHAR2(25 BYTE)             NOT NULL,
  COD_ACTUACION   NUMBER(5)                     NOT NULL,
  IND_BAJATRANS   NUMBER(2)                     NOT NULL
)   TABLESPACE MAS_SERVICE_DATA
/

COMMENT ON TABLE MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD IS '[ ESPR ] Especificación de los servicios a provisionar';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.COD_ESPEC_PROV IS 'Código del servicio a provisionar';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.NOM_PROV IS 'Nombre del Servicio a provisionar';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.DES_PROV IS 'Descripción de la especificación de Provisión';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.FEC_INI_VIG IS 'Fecha de Inicio de Vigencia de la especificación de provisión';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.FEC_TER_VIG IS 'Fecha de Termino de Vigencia de la especificación de provisión';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.COD_ESTADO IS 'Estado de la especificación de provisión';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.TIPO_ACCION IS 'Tipo de acción que se ejecuta en la central';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.COD_ACTUACION IS 'Código de Actuación asociado a la especificación de provisión';

COMMENT ON COLUMN MAS_SERVICE.SE_ESPEC_PROVISIONAMIENTO_TD.IND_BAJATRANS IS 'Indicador de control de transaccion';

