CREATE TABLE USER_SECURITY
(
  USER_ID        NUMBER(15)                     NOT NULL,
  PASSWORD       VARCHAR2(50 BYTE),
  USER_NAME      VARCHAR2(200 BYTE)             NOT NULL,
  CREATION_DATE  DATE                           DEFAULT SYSDATE               NOT NULL,
  MODIFIED_DATE  DATE                           DEFAULT SYSDATE               NOT NULL,
  FIRST_LOGIN    NUMBER(1)                      DEFAULT 1                     NOT NULL
)
TABLESPACE INSTALL_DATA
PCTUSED    0
PCTFREE    5
INITRANS   16
MAXTRANS   255
STORAGE    (
            INITIAL          320K
            NEXT             128K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOLOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
NOMONITORING;

COMMENT ON TABLE USER_SECURITY IS '[ USSE ] Table USER SECURITY';

COMMENT ON COLUMN USER_SECURITY.USER_ID IS 'USER ID';

COMMENT ON COLUMN USER_SECURITY.PASSWORD IS 'PASSWORD';

COMMENT ON COLUMN USER_SECURITY.USER_NAME IS 'USER NAME';

COMMENT ON COLUMN USER_SECURITY.CREATION_DATE IS 'CREATION DATE';

COMMENT ON COLUMN USER_SECURITY.MODIFIED_DATE IS 'MODIFIED DATE';

COMMENT ON COLUMN USER_SECURITY.FIRST_LOGIN IS 'FIRST LOGIN';

