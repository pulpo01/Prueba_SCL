    memset(&stLineaComando,0,sizeof(LINEACOMANDO));

    if (ifnValidaParametros(argc,argv,&stLineaComando) != 0)    
    {
        fprintf (stdout,"\n\t=>Error Faltan Parametros de Entrada: \n%s\n\n",szUsage);
